@using Microsoft.AspNetCore.Components.WebAssembly.Authentication
@inject NavigationManager Navigation

<AuthorizeView>
    <Authorized>
        <div class="d-flex align-items-center">
            <span class="text-white me-3 d-none d-md-block">Hello, @context.User.Identity?.Name!</span>
            <a href="/.auth/logout?post_logout_redirect_uri=/" class="btn btn-sm btn-outline-light">
                <i class="bi bi-box-arrow-right me-1"></i> Log out
            </a>
        </div>
    </Authorized>
    <NotAuthorized>
        <a href="/.auth/login/aad" class="btn btn-sm btn-outline-primary me-1" title="Log in with Microsoft">
            <i class="bi bi-microsoft"></i> Microsoft
        </a>
        
        <a href="/.auth/login/google" class="btn btn-sm btn-outline-danger" title="Log in with Google">
            <i class="bi bi-google"></i> Google
        </a>
    </NotAuthorized>
</AuthorizeView>
