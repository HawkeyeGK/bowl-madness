@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.AspNetCore.Components.Web

<AuthorizeView>
    <Authorized>
        <span class="me-3">Hello, @context.User.Identity?.Name!</span>
        <a href="/.auth/logout?post_logout_redirect_uri=/" class="btn btn-sm btn-outline-light">Logout</a>
    </Authorized>
    <NotAuthorized>
        <a href="/.auth/login/google?post_login_redirect_uri=/" class="btn btn-sm btn-light">Login</a>
    </NotAuthorized>
</AuthorizeView>
