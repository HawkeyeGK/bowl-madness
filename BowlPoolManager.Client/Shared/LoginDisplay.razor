@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.AspNetCore.Components.WebAssembly.Authentication
@inject NavigationManager Navigation

<AuthorizeView>
    <Authorized>
        <span class="me-3">Hello, <strong>@context.User.Identity?.Name</strong>!</span>
        
        <a href="/.auth/logout" class="btn btn-sm btn-outline-danger">
            <i class="bi bi-box-arrow-right"></i> Log out
        </a>
    </Authorized>
    <NotAuthorized>
        <span class="me-2 text-muted small">Log in with:</span>
        
        <a href="/.auth/login/aad" class="btn btn-sm btn-outline-primary me-1" title="Log in with Microsoft">
            <i class="bi bi-microsoft"></i> Microsoft
        </a>
        
        <a href="/.auth/login/google" class="btn btn-sm btn-outline-danger" title="Log in with Google">
            <i class="bi bi-google"></i> Google
        </a>
    </NotAuthorized>
</AuthorizeView>
