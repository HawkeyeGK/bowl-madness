@page "/mypicks"
@using BowlPoolManager.Core.Domain
@using BowlPoolManager.Core
@using Microsoft.AspNetCore.Authorization
@using System.Net.Http.Json
@using BowlPoolManager.Client.Helpers
@attribute [Authorize]
@inject HttpClient Http
@inject NavigationManager Nav
@inject AuthenticationStateProvider AuthStateProvider

<PageTitle>My Picks</PageTitle>

<div class="container mt-4 pb-5 position-relative">
    <div class="text-center mb-4">
        <h1 class="fw-bold text-primary"><i class="bi bi-controller"></i> My Picks</h1>
        @if (currentPool != null)
        {
            <p class="text-muted">
                Pool: <strong>@currentPool.Name</strong> | 
                Deadline: <span class="text-danger fw-bold">@currentPool.LockDate.ToLocalTime().ToString("g")</span>
            </p>
        }
    </div>

    @if (isLoading)
    {
        <div class="d-flex justify-content-center">
            <div class="spinner-border text-primary" role="status"><span class="visually-hidden">Loading...</span></div>
        </div>
    }
    else if (currentPool == null)
    {
        <div class="alert alert-warning text-center">
            <strong>No Active Pools Found.</strong><br/>
            Please contact the administrator to set up a pool.
        </div>
    }
    else if (myEntry == null)
    {
        @* STATE: NOT JOINED *@
        <div class="card shadow-sm mw-100 mx-auto" style="max-width: 500px;">
            <div class="card-body p-4 text-center">
                <i class="bi bi-shield-lock display-1 text-secondary mb-3"></i>
                <h3 class="mb-3">Join the Pool</h3>
                <p class="text-muted mb-4">Enter the invite code provided by the commissioner to create your bracket.</p>
                
                <EditForm Model="@joinModel" OnValidSubmit="InitializeEntry">
                    <div class="mb-3">
                        <InputText @bind-Value="joinModel.InviteCode" class="form-control form-control-lg text-center" placeholder="Enter Invite Code" />
                    </div>
                    @if (!string.IsNullOrEmpty(errorMessage))
                    {
                        <div class="text-danger mb-3 small">@errorMessage</div>
                    }
                    <button type="submit" class="btn btn-primary btn-lg w-100">Start Picking</button>
                </EditForm>
            </div>
        </div>
    }
    else
    {
        @* STATE: JOINED (LOCKED or OPEN) *@
        bool isLocked = DateTime.UtcNow > currentPool.LockDate;

        @if (isLocked)
        {
            <div class="alert alert-warning text-center">
                <i class="bi bi-lock-fill"></i> <strong>Picks are Locked!</strong><br/>
                The deadline has passed. Good luck!
            </div>
        }
        else
        {
             <div class="alert alert-info text-center">
                <i class="bi bi-pencil-fill"></i> <strong>Picks are Open</strong><br/>
                You can edit your picks until the deadline.
            </div>
        }

        <EditForm Model="@myEntry" OnValidSubmit="SavePicks">
            <DataAnnotationsValidator />
            
            @if (!string.IsNullOrEmpty(errorMessage))
            {
                <div class="alert alert-danger">@errorMessage</div>
            }
            @if (showSuccess)
            {
                <div class="alert alert-success alert-dismissible fade show">
                    <i class="bi bi-check-circle-fill"></i> Picks saved successfully!
                    <button type="button" class="btn-close" @onclick="() => showSuccess = false"></button>
                </div>
            }

            @* PLAYER NAME *@
            <div class="card mb-4 shadow-sm">
                <div class="card-body">
                    <label class="form-label fw-bold">Bracket Name (Your Name)</label>
                    <InputText @bind-Value="myEntry.PlayerName" class="form-control" disabled="@isLocked" placeholder="e.g. John Doe" />
                    <ValidationMessage For="@(() => myEntry.PlayerName)" />
                </div>
            </div>

            @* GAMES LIST *@
            <div class="card shadow-sm mb-5">
                <div class="card-header bg-dark text-white fw-bold">
                    Make Your Picks (@myEntry.Picks.Count / @games.Count Selected)
                </div>
                <ul class="list-group list-group-flush">
                    @foreach (var game in games.OrderBy(g => g.StartTime))
                    {
                        string pick = myEntry.Picks.ContainsKey(game.Id) ? myEntry.Picks[game.Id] : "";
                        bool isSelected = !string.IsNullOrEmpty(pick);
                        var slots = GetMatchupSlots(game);
                        bool isGameReady = slots.Home != "TBD" && slots.Away != "TBD";
                        bool isDisabled = isLocked || !isGameReady;

                        <li class="list-group-item p-3 @(isSelected ? "bg-light-success" : "")">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <span class="badge bg-secondary">@game.BowlName</span>
                                <span class="small text-muted">@DateTimeHelper.ToCentral(game.StartTime).ToString("MMM d, h:mm tt")</span>
                            </div>
                            
                            <div class="row g-2">
                                @* SLOT 1: HOME *@
                                <div class="col">
                                    <input type="radio" class="btn-check" name="@game.Id" id="@($"{game.Id}_home")" 
                                           checked="@(pick == slots.Home && slots.Home != "TBD")" 
                                           disabled="@isDisabled"
                                           @onchange="@(() => UpdatePick(game.Id, slots.Home))" autocomplete="off">
                                    
                                    <label class="btn @(isDisabled ? "btn-outline-secondary" : "btn-outline-primary") w-100 d-flex align-items-center justify-content-center h-100 @(pick == slots.Home && slots.Home != "TBD" ? "active fw-bold" : "")" 
                                           for="@($"{game.Id}_home")">
                                        @slots.Home
                                    </label>
                                </div>

                                @* SLOT 2: AWAY *@
                                <div class="col">
                                    <input type="radio" class="btn-check" name="@game.Id" id="@($"{game.Id}_away")" 
                                           checked="@(pick == slots.Away && slots.Away != "TBD")" 
                                           disabled="@isDisabled"
                                           @onchange="@(() => UpdatePick(game.Id, slots.Away))" autocomplete="off">
                                    
                                    <label class="btn @(isDisabled ? "btn-outline-secondary" : "btn-outline-primary") w-100 d-flex align-items-center justify-content-center h-100 @(pick == slots.Away && slots.Away != "TBD" ? "active fw-bold" : "")" 
                                           for="@($"{game.Id}_away")">
                                        @slots.Away
                                    </label>
                                </div>
                            </div>
                            
                            @if (!isGameReady)
                            {
                                <div class="text-muted small fst-italic text-center mt-2">
                                    Pick winners in previous rounds to unlock this game.
                                </div>
                            }
                        </li>
                    }
                </ul>
            </div>

            @* TIEBREAKER *@
            <div class="card mb-4 shadow-sm border-warning">
                <div class="card-body bg-warning bg-opacity-10">
                    <label class="form-label fw-bold text-dark">Tiebreaker: Total Points in Championship Game</label>
                    <InputNumber @bind-Value="myEntry.TieBreakerPoints" class="form-control" disabled="@isLocked" />
                    <div class="form-text">Estimate the combined score (e.g., 65).</div>
                </div>
            </div>

            @* SUBMIT *@
            @if (!isLocked)
            {
                <div class="d-grid gap-2 mb-5">
                    <button type="submit" class="btn btn-success btn-lg" disabled="@(!IsComplete || isSaving)">
                        @if (isSaving)
                        {
                            <span class="spinner-border spinner-border-sm me-2"></span> <span>Saving...</span>
                        }
                        else
                        {
                            <i class="bi bi-save-fill"></i> <span>Submit Picks</span>
                        }
                    </button>
                    @if (!IsComplete)
                    {
                        <div class="text-center text-danger small">
                            You must pick all @games.Count games before submitting.
                        </div>
                    }
                </div>
            }
        </EditForm>
        
        @* NEW: Toast Notification *@
        <div class="toast-container position-fixed bottom-0 end-0 p-3" style="z-index: 1050">
            <div class="toast @(showToast ? "show" : "hide") align-items-center text-white @(isSuccessToast ? "bg-success" : "bg-danger") border-0" role="alert" aria-live="assertive" aria-atomic="true">
                <div class="d-flex">
                    <div class="toast-body fs-6">
                        <i class="@(isSuccessToast ? "bi bi-check-circle-fill" : "bi bi-exclamation-triangle-fill") me-2"></i> @toastMessage
                    </div>
                    <button type="button" class="btn-close btn-close-white me-2 m-auto" @onclick="() => showToast = false" aria-label="Close"></button>
                </div>
            </div>
        </div>
    }
</div>

@code {
    private class JoinModel { public string InviteCode { get; set; } = ""; }
    private JoinModel joinModel = new();
    
    private bool isLoading = true;
    private bool isSaving = false;
    private bool showSuccess = false;
    private string errorMessage = "";
    
    // Toast State
    private bool showToast = false;
    private bool isSuccessToast = true;
    private string toastMessage = "";
    
    private BowlPool? currentPool;
    private List<BowlGame> games = new();
    private BracketEntry? myEntry;

    private bool IsComplete => myEntry != null && games.Count > 0 && myEntry.Picks.Count == games.Count;

    protected override async Task OnInitializedAsync()
    {
        try 
        {
            isLoading = true;
            var pools = await Http.GetFromJsonAsync<List<BowlPool>>("api/GetPools");
            currentPool = pools?.FirstOrDefault();

            if (currentPool != null)
            {
                games = await Http.GetFromJsonAsync<List<BowlGame>>("api/GetGames") ?? new();
                var response = await Http.GetAsync($"api/GetMyEntry?poolId={currentPool.Id}");
                if (response.IsSuccessStatusCode)
                {
                    myEntry = await response.Content.ReadFromJsonAsync<BracketEntry>();
                }
                else if (response.StatusCode == System.Net.HttpStatusCode.NotFound)
                {
                    myEntry = null; 
                }
            }
        }
        catch (Exception ex)
        {
            errorMessage = "Error loading data: " + ex.Message;
        }
        finally
        {
            isLoading = false;
        }
    }

    private void InitializeEntry()
    {
        if (currentPool == null) return;
        if (!string.Equals(joinModel.InviteCode, currentPool.InviteCode, StringComparison.OrdinalIgnoreCase))
        {
            errorMessage = "Invalid Invite Code.";
            return;
        }
        errorMessage = "";
        myEntry = new BracketEntry { PoolId = currentPool.Id };
    }

    private void UpdatePick(string gameId, string winner)
    {
        if (myEntry == null) return;
        myEntry.Picks[gameId] = winner;
        StateHasChanged();
    }

    private async Task SavePicks()
    {
        if (myEntry == null || currentPool == null) return;

        isSaving = true;
        errorMessage = "";
        showSuccess = false;

        try
        {
            string url = "api/SaveMyEntry";
            if (!string.IsNullOrEmpty(joinModel.InviteCode))
            {
                url += $"?inviteCode={joinModel.InviteCode}";
            }

            var response = await Http.PostAsJsonAsync(url, myEntry);

            if (response.IsSuccessStatusCode)
            {
                myEntry = await response.Content.ReadFromJsonAsync<BracketEntry>();
                showSuccess = true;
                TriggerToast("Picks saved successfully!", true);
            }
            else
            {
                var errorText = await response.Content.ReadAsStringAsync();
                errorMessage = $"Save failed: {errorText}";
                TriggerToast(errorMessage, false);
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error: {ex.Message}";
            TriggerToast(errorMessage, false);
        }
        finally
        {
            isSaving = false;
        }
    }

    // Helper to fire the toast and auto-hide it
    private void TriggerToast(string message, bool success)
    {
        toastMessage = message;
        isSuccessToast = success;
        showToast = true;
        
        // Auto-dismiss after 4 seconds
        _ = Task.Delay(4000).ContinueWith(t => 
        {
            showToast = false;
            InvokeAsync(StateHasChanged);
        });
    }

    private (string Home, string Away) GetMatchupSlots(BowlGame game)
    {
        string home = game.TeamHome;
        string away = game.TeamAway;

        if (game.IsPlayoff)
        {
             var feeders = games.Where(g => g.NextGameId == game.Id).OrderBy(g => g.StartTime).ToList();
             var feederQueue = new Queue<BowlGame>(feeders);

             if (string.IsNullOrWhiteSpace(home) || home.Equals("TBD", StringComparison.OrdinalIgnoreCase))
             {
                 if (feederQueue.TryDequeue(out var f1))
                 {
                     if (myEntry != null && myEntry.Picks.TryGetValue(f1.Id, out var w1)) home = w1;
                     else home = "TBD";
                 }
                 else home = "TBD";
             }

             if (string.IsNullOrWhiteSpace(away) || away.Equals("TBD", StringComparison.OrdinalIgnoreCase))
             {
                 if (feederQueue.TryDequeue(out var f2))
                 {
                     if (myEntry != null && myEntry.Picks.TryGetValue(f2.Id, out var w2)) away = w2;
                     else away = "TBD";
                 }
                 else away = "TBD";
             }
        }

        if (string.IsNullOrWhiteSpace(home)) home = "TBD";
        if (string.IsNullOrWhiteSpace(away)) away = "TBD";
        
        return (home, away);
    }
}
