@page "/mypicks"
@using BowlPoolManager.Core.Domain
@using BowlPoolManager.Core
@using BowlPoolManager.Core.Helpers
@using Microsoft.AspNetCore.Authorization
@using System.Net.Http.Json
@using BowlPoolManager.Client.Helpers
@attribute [Authorize]
@inject HttpClient Http
@inject NavigationManager Nav
@inject AuthenticationStateProvider AuthStateProvider
@inject BowlPoolManager.Client.Services.AppState AppState
@inject BowlPoolManager.Client.Services.ISeasonService SeasonService
@inject IJSRuntime JS

<PageTitle>My Picks</PageTitle>

<div class="container mt-4 pb-5 position-relative">
    <div class="text-center mb-4">
        <h1 class="fw-bold text-primary"><i class="bi bi-clipboard-check-fill"></i> My Picks</h1>
    </div>

    @if (isLoading)
    {
        <div class="d-flex justify-content-center">
            <div class="spinner-border text-primary" role="status"><span class="visually-hidden">Loading...</span></div>
        </div>
    }
    else
    {
        @* --- DASHBOARD VIEW --- *@
        @if (viewMode == ViewMode.Dashboard)
        {
            @* CURRENT SEASON SECTION *@
            <div class="mb-5">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h2 class="h4 text-secondary mb-0">Current Season (@currentSeasonId)</h2>
                    <button class="btn btn-primary" @onclick="CreateAdditionalEntry">
                         <i class="bi bi-plus-lg"></i> New Entry
                    </button>
                </div>

                @if (!currentEntries.Any())
                {
                     <div class="card shadow-sm border-0 bg-light mb-5">
                        <div class="card-body p-4 text-center">
                            <i class="bi bi-ticket-perforated display-4 text-primary mb-3"></i>
                            <h4 class="card-title fw-bold">Join the Action for @currentSeasonId!</h4>
                            <p class="text-muted mb-4">You don't have any brackets yet. Enter an invite code below to get started.</p>
                            
                            <div class="mx-auto" style="max-width: 400px;">
                                <EditForm Model="@joinModel" OnValidSubmit="StartNewEntry">
                                    <div class="input-group input-group-lg mb-3">
                                        <InputText @bind-Value="joinModel.InviteCode" class="form-control" placeholder="Enter Invite Code" />
                                        <button class="btn btn-primary" type="submit">Join Pool</button>
                                    </div>
                                </EditForm>
                            </div>
                        </div>
                    </div>
                }
                else
                {
                    @* LIST OF CURRENT ENTRIES *@
                    <div class="row g-3">
                        @foreach (var entry in currentEntries)
                        {
                            var stats = GetEntryStats(entry);
                            var poolName = pools.FirstOrDefault(p => p.Id == entry.PoolId)?.Name ?? "Unknown Pool";
                            <div class="col-md-6 col-lg-4">
                                <div class="card h-100 shadow-sm border-0">
                                    <div class="card-header bg-white border-bottom-0 pb-0">
                                         <span class="badge bg-light text-secondary border">@poolName</span>
                                    </div>
                                    <div class="card-body pt-2">
                                         <div class="d-flex justify-content-between align-items-start mb-3">
                                            <h4 class="card-title fw-bold text-primary mb-0 text-truncate" title="@entry.PlayerName">
                                                @entry.PlayerName
                                            </h4>
                                        </div>

                                         <div class="row text-center mb-3 g-0 border rounded bg-light py-2">
                                            <div class="col border-end">
                                                 <small class="text-muted d-block">Points</small>
                                                <span class="fw-bold fs-5">@stats.Score</span>
                                            </div>
                                            <div class="col border-end">
                                                <small class="text-muted d-block">Max</small>
                                                 <span class="fw-bold fs-5">@stats.MaxPossible</span>
                                            </div>
                                             <div class="col">
                                                <small class="text-muted d-block">Correct</small>
                                                 <span class="fw-bold fs-5">@stats.CorrectPicks</span>
                                            </div>
                                        </div>

                                         <div class="d-flex gap-2">
                                            <button class="btn btn-outline-primary flex-grow-1" @onclick="() => EditEntry(entry)">
                                                 <i class="bi bi-pencil-square"></i> View/Edit
                                            </button>
                                            
                                            @* PRINT BUTTON *@
                                            <a href="print-bracket/@entry.Id" target="_blank" class="btn btn-outline-secondary" title="Print Bracket">
                                                 <i class="bi bi-printer"></i>
                                            </a>

                                             <button class="btn btn-outline-danger" @onclick="() => DeleteEntry(entry)" title="Delete Bracket">
                                                <i class="bi bi-trash-fill"></i>
                                             </button>
                                        </div>
                                      </div>
                                </div>
                            </div>
                        }
                    </div>
                }
            </div>

            @* PAST SEASONS SECTION *@
            @if (pastEntries.Any())
            {
                <div class="mb-4 pt-4 border-top">
                    <h3 class="h5 text-secondary mb-3"><i class="bi bi-clock-history me-2"></i>Past Seasons</h3>
                    
                    <div class="row g-3">
                        @foreach (var entry in pastEntries.OrderByDescending(e => e.SeasonId))
                        {
                            var poolName = pools.FirstOrDefault(p => p.Id == entry.PoolId)?.Name ?? "Unknown Pool";
                            <div class="col-md-6 col-lg-4"> 
                                <div class="card h-100 shadow-sm border-0 bg-light">
                                    <div class="card-body">
                                        <div class="d-flex justify-content-between align-items-start mb-2">
                                            <div>
                                                 <h5 class="card-title text-dark mb-1">@poolName</h5>
                                                 <h6 class="card-subtitle text-muted small">Season @entry.SeasonId</h6>
                                            </div>
                                            <span class="badge bg-secondary">Archived</span>
                                        </div>
                                        
                                        <p class="card-text small mt-2">
                                            Bracket: <strong>@entry.PlayerName</strong>
                                        </p>

                                        <div class="d-grid mt-3">
                                            <a href="history/@entry.PoolId" class="btn btn-outline-primary btn-sm">
                                                <i class="bi bi-eye me-1"></i> View Pool Archive
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            }
        }

        @* --- JOIN VIEW (STANDALONE) --- *@
        @if (viewMode == ViewMode.Join)
        {
             <div class="card shadow-sm mw-100 mx-auto mt-5" style="max-width: 500px;">
                <div class="card-body p-5 text-center">
                    <button class="btn btn-sm btn-close position-absolute top-0 end-0 m-3" @onclick="BackToDashboard"></button>
                     
                    <i class="bi bi-ticket-perforated display-1 text-secondary mb-3"></i>
                    <h3 class="mb-3">Enter Pool</h3>
                    <p class="text-muted mb-4">Enter your invite code to join a pool.</p>
                   
                    <EditForm Model="@joinModel" OnValidSubmit="StartNewEntry">
                        <div class="mb-3">
                            <InputText @bind-Value="joinModel.InviteCode" class="form-control form-control-lg text-center" placeholder="e.g. BOWL2025" />
                        </div>
                        <button type="submit" class="btn btn-primary btn-lg w-100">Continue</button>
                     </EditForm>
                </div>
            </div>
        }

        @* --- EDITOR VIEW --- *@
        @if (viewMode == ViewMode.Editor)
        {
             <div class="d-flex justify-content-between align-items-center mb-4">
                <div class="d-flex align-items-center">
                    <button class="btn btn-outline-secondary me-3" @onclick="BackToDashboard">
                         <i class="bi bi-arrow-left"></i> Back
                     </button>
                    <div>
                        <h2 class="fw-bold mb-0">
                            @(string.IsNullOrEmpty(activeEntry.Id) ? "New Entry" : "Edit Entry")
                        </h2>
                        @if (EntryPool != null)
                        {
                            <div class="small text-muted">@EntryPool.Name</div>
                        }

                        @if (IsEntryLocked)
                        {
                             <span class="badge bg-warning text-dark"><i class="bi bi-lock-fill"></i> Locked</span>
                          }
                        else if (EntryPool != null)
                        {
                            <span class="text-muted small">Deadline: @EntryPool.LockDate.ToLocalTime().ToString("g")</span>
                         }
                    </div>
                </div>
                
                @if(!string.IsNullOrEmpty(activeEntry.Id)) 
                {
                    <a href="print-bracket/@activeEntry.Id" target="_blank" class="btn btn-outline-secondary">
                        <i class="bi bi-printer me-2"></i> Print Picks
                     </a>
                }
            </div>

            <EditForm Model="@activeEntry" OnValidSubmit="SavePicks" OnInvalidSubmit="HandleInvalidSubmit">
                <DataAnnotationsValidator />
                
                @if (!string.IsNullOrEmpty(errorMessage))
                 {
                    <div class="alert alert-danger">
                        <i class="bi bi-exclamation-triangle-fill"></i> @errorMessage
                    </div>
                 }

                @* PLAYER NAME *@
                <div class="card mb-4 shadow-sm">
                    <div class="card-body">
                        <label class="form-label fw-bold">Bracket Name</label>
                         <InputText @bind-Value="activeEntry.PlayerName" class="form-control" disabled="@IsEntryLocked" placeholder="Give this bracket a unique name" />
                        <ValidationMessage For="@(() => activeEntry.PlayerName)" />
                    </div>
                </div>

                @* GAMES LIST *@
                <div class="card shadow-sm mb-5">
                    <div class="card-header bg-dark text-white fw-bold">
                        Make Your Picks (@(activeEntry.Picks?.Count ?? 0) / @ValidGames.Count Selected)
                    </div>
                     <ul class="list-group list-group-flush">
                        @foreach (var game in ValidGames.OrderBy(g => g.IsPlayoff).ThenBy(g => g.StartTime))
                        {
                             // FIX: Safe dictionary access
                             string pick = "";
                             if (activeEntry.Picks?.TryGetValue(game.Id, out var p) == true)
                             {
                                 pick = p;
                             }
                             
                            bool isSelected = !string.IsNullOrEmpty(pick);
                            var slots = GetMatchupSlots(game);
                            bool isGameReady = slots.Home != "TBD" && slots.Away != "TBD";
                            bool isDisabled = IsEntryLocked || !isGameReady;
                            
                             <li class="list-group-item p-3 @(isSelected ? "bg-light-success" : "")">
                                <div class="d-flex justify-content-between align-items-start mb-2">
                                     <div>
                                         <span class="badge bg-secondary">@game.BowlName</span>
                                        @if (game.IsPlayoff)
                                         {
                                            <span class="badge bg-warning text-dark ms-1">Playoff</span>
                                        }
                                     </div>
                                    <div class="text-end">
                                         <div class="small fw-bold text-dark">
                                            @DateTimeHelper.ToCentral(game.StartTime).ToString("MMM d, h:mm tt") CT
                                         </div>
                                          <div class="small text-muted" style="font-size: 0.85em;">
                                            @game.Location 
                                         </div>
                                    </div>
                               </div>
                                 
                                <div class="row g-2">
                                    <div class="col">
                                         <input type="radio" class="btn-check" name="@game.Id" id="@($"{game.Id}_home")" 
                                               checked="@(pick == slots.Home && slots.Home != "TBD")" 
                                               disabled="@isDisabled"
                                               @onchange="@(() => UpdatePick(game.Id, slots.Home))" autocomplete="off">
                                         
                                         <label class="btn @(isDisabled ? "btn-outline-secondary" : "btn-outline-primary") w-100 d-flex align-items-center justify-content-center h-100 @(pick == slots.Home && slots.Home != "TBD" ? "active fw-bold" : "")" 
                                               for="@($"{game.Id}_home")">
                                              @slots.Home
                                        </label>
                                    </div>

                                      <div class="col">
                                        <input type="radio" class="btn-check" name="@game.Id" id="@($"{game.Id}_away")" 
                                                 checked="@(pick == slots.Away && slots.Away != "TBD")" 
                                               disabled="@isDisabled"
                                                 @onchange="@(() => UpdatePick(game.Id, slots.Away))" autocomplete="off">
                                        
                                          <label class="btn @(isDisabled ? "btn-outline-secondary" : "btn-outline-primary") w-100 d-flex align-items-center justify-content-center h-100 @(pick == slots.Away && slots.Away != "TBD" ? "active fw-bold" : "")" 
                                               for="@($"{game.Id}_away")">
                                            @slots.Away
                                         </label>
                                    </div>
                                 </div>
                            </li>
                         }
                    </ul>
                </div>

                 @* TIEBREAKER *@
                <div class="card mb-4 shadow-sm border-warning">
                     <div class="card-body bg-warning bg-opacity-10">
                        @{
                             var tieBreakerGame = allSeasonGames.FirstOrDefault(g => g.Id == EntryPool?.TieBreakerGameId);
                             string tbText = tieBreakerGame != null 
                                 ? $"Tiebreaker: Total Points in {tieBreakerGame.BowlName} - {tieBreakerGame.TeamHome} vs {tieBreakerGame.TeamAway}"
                                 : "Tiebreaker: Total Points";
                        }
                        <label class="form-label fw-bold text-dark">@tbText</label>
                         <InputNumber @bind-Value="activeEntry.TieBreakerPoints" class="form-control" disabled="@IsEntryLocked" />
                    </div>
                </div>

                @* ACTIONS *@
                @if (!IsEntryLocked)
                 {
                    <div class="d-grid gap-2 mb-5">
                        <button type="submit" class="btn btn-success btn-lg" disabled="@isSaving">
                             @if (isSaving)
                            {
                                <span class="spinner-border spinner-border-sm me-2"></span> <span>Saving...</span>
                             }
                            else
                            {
                                  <i class="bi bi-save-fill"></i> <span>Save Bracket</span>
                            }
                        </button>
                    </div>
                }
             </EditForm>
        }
    }
    
    @* TOAST NOTIFICATION *@
    <div class="toast-container position-fixed bottom-0 end-0 p-3" style="z-index: 1050">
        <div class="toast @(showToast ? "show" : "hide") align-items-center text-white @(isSuccessToast ? "bg-success" : "bg-danger") border-0" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="d-flex">
                <div class="toast-body fs-6">
                    <i class="@(isSuccessToast ? "bi bi-check-circle-fill" : "bi bi-exclamation-triangle-fill") me-2"></i> @toastMessage
                </div>
                 <button type="button" class="btn-close btn-close-white me-2 m-auto" @onclick="() => showToast = false"></button>
            </div>
        </div>
    </div>
</div>

@code {
    private enum ViewMode { Dashboard, Join, Editor }
    private ViewMode viewMode = ViewMode.Dashboard;

    private class JoinModel { public string InviteCode { get; set; } = ""; }
    private JoinModel joinModel = new();
    
    private bool isLoading = true;
    
    private bool isSaving = false;
    private string errorMessage = "";
    
    private bool showToast = false;
    private bool isSuccessToast = true;
    private string toastMessage = "";
    
    private List<BowlPool> pools = new();
    
    private List<BowlGame> allSeasonGames = new();
    
    // Dynamic Filter for Editor
    private List<BowlGame> ValidGames 
    {
        get 
        {
            if (viewMode != ViewMode.Editor) return new List<BowlGame>();
            
            BowlPool? targetPool = null;
            if (!string.IsNullOrEmpty(activeEntry.PoolId))
            {
                targetPool = pools.FirstOrDefault(p => p.Id == activeEntry.PoolId);
            }
            else if (!string.IsNullOrEmpty(joinModel.InviteCode))
            {
                // Find pool by invite code - PRIORITIZE ACTIVE POOLS
                targetPool = pools.FirstOrDefault(p => 
                    string.Equals(p.InviteCode, joinModel.InviteCode, StringComparison.OrdinalIgnoreCase) && 
                    !p.IsArchived);
                
                // Fallback: If no active pool found, allow archived? (User request implies strictly active check)
                // For now, let's stick to the requirement: "only active pools should be checked"

            }
            
            if (targetPool != null && targetPool.GameIds != null && targetPool.GameIds.Any())
            {
                return allSeasonGames.Where(g => targetPool.GameIds.Contains(g.Id)).ToList();
            }
            
            // FALLBACK SAFETY: If we are in "New Entry" mode (have an invite code) but found no pool,
            // return NONE instead of ALL.
            if (!string.IsNullOrEmpty(joinModel.InviteCode) && string.IsNullOrEmpty(activeEntry.PoolId))
            {
                return new List<BowlGame>();
            }

            return allSeasonGames;
        }
    }
    
    private List<BracketEntry> myEntries = new();
    private List<BracketEntry> currentEntries = new();
    private List<BracketEntry> pastEntries = new();
    private BracketEntry activeEntry = new() { Picks = new Dictionary<string, string>() };

    private string currentSeasonId = Constants.CurrentSeason;
    
    // Helpers for Editor
    private BowlPool? EntryPool => pools.FirstOrDefault(p => p.Id == activeEntry.PoolId);
    private bool IsEntryLocked => EntryPool != null && DateTime.UtcNow > EntryPool.LockDate;

    protected override async Task OnInitializedAsync()
    {
        try 
        {
            isLoading = true;
            
            // 0. Fetch Seasons (Dynamic Source of Truth)
            // Fetch seasons first to determine the current one
            var seasons = await SeasonService.GetSeasonsAsync();
            var activeSeason = seasons.FirstOrDefault(s => s.IsCurrent);
            if (activeSeason != null)
            {
                currentSeasonId = activeSeason.Id;
            }
            
            // 1. Fetch Global Data
            var poolsTask = Http.GetFromJsonAsync<List<BowlPool>>("api/GetPools");
            var gamesTask = Http.GetFromJsonAsync<List<BowlGame>>("api/GetGames");
            var entriesTask = Http.GetFromJsonAsync<List<BracketEntry>>("api/GetMyEntries");
            
            await Task.WhenAll(poolsTask, gamesTask, entriesTask);
            
            pools = await poolsTask ?? new();
            allSeasonGames = await gamesTask ?? new();
            var allEntries = await entriesTask ?? new();
            
            // Separation of Church and State (Current vs Past)
            currentEntries = allEntries.Where(e => e.SeasonId == currentSeasonId).ToList();
            pastEntries = allEntries.Where(e => e.SeasonId != currentSeasonId).ToList();
            
            // Keep myEntries for delete logic or other ops?
            myEntries = allEntries;
            
            // Ensure Active Entry has instantiated Picks
            if (activeEntry.Picks == null) activeEntry.Picks = new Dictionary<string, string>();
        }
        catch (Exception ex)
        {
            errorMessage = "Error loading data: " + ex.Message;
        }
        finally
        {
            isLoading = false;
        }
    }

    private void CreateAdditionalEntry()
    {
        errorMessage = "";
        joinModel.InviteCode = "";
        viewMode = ViewMode.Join;
    }

    private void StartNewEntry()
    {
        if (string.IsNullOrWhiteSpace(joinModel.InviteCode))
        {
            TriggerToast("Please enter an invite code.", false);
            return;
        }

        // VALIDATION: Check if code corresponds to an valid, active pool
        var targetPool = pools.FirstOrDefault(p => 
            string.Equals(p.InviteCode, joinModel.InviteCode, StringComparison.OrdinalIgnoreCase) && 
            !p.IsArchived);

        if (targetPool == null)
        {
             TriggerToast("Invalid Invite Code. Please check and try again.", false);
             return;
        }

        activeEntry = new BracketEntry(); 
        activeEntry.Picks = new Dictionary<string, string>(); // Safe Init
        activeEntry.Id = "";
        activeEntry.PoolId = targetPool.Id; // Pre-set the Pool ID
        
        viewMode = ViewMode.Editor;
    }

    private void EditEntry(BracketEntry entry)
    {
        // 1. Check for Archive
        var pool = pools.FirstOrDefault(p => p.Id == entry.PoolId);
        if (pool != null && pool.IsArchived)
        {
            Nav.NavigateTo($"history/{pool.Id}");
            return;
        }

        // Safe deep copy serialization
        activeEntry = System.Text.Json.JsonSerializer.Deserialize<BracketEntry>(
            System.Text.Json.JsonSerializer.Serialize(entry)
        ) ?? new BracketEntry();

        if (activeEntry.Picks == null) activeEntry.Picks = new Dictionary<string, string>();

        errorMessage = "";
        viewMode = ViewMode.Editor;
    }

    private void BackToDashboard()
    {
        viewMode = ViewMode.Dashboard;
        errorMessage = "";
    }

    private void UpdatePick(string gameId, string winner)
    {
        if (activeEntry.Picks == null) activeEntry.Picks = new Dictionary<string, string>();
        activeEntry.Picks[gameId] = winner;
        StateHasChanged();
    }

    private void HandleInvalidSubmit()
    {
        TriggerToast("Please check the form for errors.", false);
    }

    private async Task DeleteEntry(BracketEntry entry)
    {
        bool confirmed = await JS.InvokeAsync<bool>("confirm", $"Are you sure you want to delete the bracket '{entry.PlayerName}'? This action cannot be undone.");
        if (!confirmed) return;

        isSaving = true;
        try
        {
            var response = await Http.DeleteAsync($"api/DeleteEntry?id={entry.Id}");
            if (response.IsSuccessStatusCode)
            {
                myEntries.Remove(entry);
                if (entry.SeasonId == currentSeasonId)
                {
                    currentEntries.Remove(entry);
                }
                else
                {
                    pastEntries.Remove(entry);
                }
                TriggerToast("Bracket deleted successfully.", true);
                
                AppState.NotifyDataChanged();
                StateHasChanged();
            }
            else
            {
                var msg = await response.Content.ReadAsStringAsync();
                TriggerToast($"Delete failed: {msg}", false);
            }
        }
        catch (Exception ex)
        {
            TriggerToast($"Error: {ex.Message}", false);
        }
        finally
        {
            isSaving = false;
        }
    }

    private async Task SavePicks()
    {
        // FIX: Ensure Picks is not null before LINQ query
        activeEntry.Picks ??= new Dictionary<string, string>();

        // --- VALIDATION: CHECK MISSING PICKS ---
        // Ensure we only validate games that are officially part of this pool
        var currentGames = ValidGames;
        var missingGames = currentGames.Where(g => !activeEntry.Picks.ContainsKey(g.Id) || string.IsNullOrEmpty(activeEntry.Picks[g.Id]))
                                .OrderBy(g => g.StartTime)
                                .ToList();
        if (missingGames.Any())
        {
            string gameList = string.Join(", ", missingGames.Select(g => g.BowlName));
            TriggerToast($"Please select a winner for: {gameList}", false);
            return;
        }

        isSaving = true;
        errorMessage = "";

        try
        {
            string url = "api/CreateEntry";
            if (!string.IsNullOrEmpty(joinModel.InviteCode) && string.IsNullOrEmpty(activeEntry.PoolId))
            {
                activeEntry.Id = "";
                url += $"?inviteCode={joinModel.InviteCode}";
            }

            var response = await Http.PostAsJsonAsync(url, activeEntry);
            if (response.IsSuccessStatusCode)
            {
                var savedEntry = await response.Content.ReadFromJsonAsync<BracketEntry>();
                if (savedEntry != null)
                {
                    var targetList = (savedEntry.SeasonId == currentSeasonId) ? currentEntries : pastEntries;
                    var existingIndex = targetList.FindIndex(e => e.Id == savedEntry.Id);
                    
                    if (existingIndex >= 0)
                    {
                        targetList[existingIndex] = savedEntry;
                    }
                    else
                    {
                        targetList.Add(savedEntry);
                    }
                    
                    // Also keep master list in sync just in case
                    var masterIndex = myEntries.FindIndex(e => e.Id == savedEntry.Id);
                    if (masterIndex >= 0) myEntries[masterIndex] = savedEntry;
                    else myEntries.Add(savedEntry);
                    
                    TriggerToast("Bracket saved successfully!", true);
                    viewMode = ViewMode.Dashboard;
                    
                    AppState.NotifyDataChanged();
                }
            }
            else if (response.StatusCode == System.Net.HttpStatusCode.Conflict)
            {
                errorMessage = await response.Content.ReadAsStringAsync();
                TriggerToast("Name already taken.", false);
            }
            else
            {
                var errorText = await response.Content.ReadAsStringAsync();
                errorMessage = $"Save failed: {errorText}";
                TriggerToast($"Save failed: {errorText}", false);
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error: {ex.Message}";
        }
        finally
        {
            isSaving = false;
        }
    }

    private LeaderboardRow GetEntryStats(BracketEntry entry)
    {
        var rows = ScoringEngine.Calculate(allSeasonGames, new List<BracketEntry> { entry });
        return rows.FirstOrDefault() ?? new LeaderboardRow();
    }

    private void TriggerToast(string message, bool success)
    {
        toastMessage = message;
        isSuccessToast = success;
        showToast = true;
        
        _ = Task.Delay(4000).ContinueWith(t => 
        {
            showToast = false;
            InvokeAsync(StateHasChanged);
        });
    }

    private (string Home, string Away) GetMatchupSlots(BowlGame game)
    {
        string home = game.TeamHome;
        string away = game.TeamAway;

        if (game.IsPlayoff)
        {
             // Look up in all games to find feeders, even if not in current view (unlikely but safe)
             var feeders = allSeasonGames.Where(g => g.NextGameId == game.Id).OrderBy(g => g.StartTime).ToList();
             var feederQueue = new Queue<BowlGame>(feeders);

             if (string.IsNullOrWhiteSpace(home) || home.Equals("TBD", StringComparison.OrdinalIgnoreCase))
             {
                 if (feederQueue.TryDequeue(out var f1))
                 {
                     if (activeEntry.Picks != null && activeEntry.Picks.TryGetValue(f1.Id, out var w1)) home = w1;
                     else home = $"Winner of {f1.BowlName}";
                 }
                 else home = "TBD";
             }

             if (string.IsNullOrWhiteSpace(away) || away.Equals("TBD", StringComparison.OrdinalIgnoreCase))
             {
                 if (feederQueue.TryDequeue(out var f2))
                 {
                     if (activeEntry.Picks != null && activeEntry.Picks.TryGetValue(f2.Id, out var w2)) away = w2;
                     else away = $"Winner of {f2.BowlName}";
                 }
                 else away = "TBD";
             }
        }

        if (string.IsNullOrWhiteSpace(home)) home = "TBD";
        if (string.IsNullOrWhiteSpace(away)) away = "TBD";
        
        return (home, away);
    }
