@page "/admin/users"
@using BowlPoolManager.Core.Domain
@using BowlPoolManager.Core
@using Microsoft.AspNetCore.Authorization
@using System.Net.Http.Json
@attribute [Authorize(Roles = Constants.Roles.SuperAdmin)]
@inject HttpClient Http

<PageTitle>User Management</PageTitle>

<div class="container-fluid mt-3 px-4">
    <div class="d-flex justify-content-between align-items-end mb-3">
        <div class="d-flex flex-column gap-2">
            <div class="d-flex align-items-center gap-3">
                <h1 class="h3 fw-bold mb-0"><i class="bi bi-people-fill text-primary"></i> User Management</h1>
            </div>
        </div>
        <a href="/admin/dashboard" class="btn btn-outline-secondary">Back to Dashboard</a>
    </div>

    @if (isLoading)
    {
        <div class="d-flex justify-content-center">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    }
    else if (users == null || !users.Any())
    {
        <div class="alert alert-warning">No users found.</div>
    }
    else
    {
        <div class="card shadow-sm">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-striped table-hover mb-0 align-middle">
                        <thead class="bg-light">
                            <tr>
                                <th>Name / Email</th>
                                <th>Role</th>
                                <th>Status</th>
                                <th class="text-end pe-3">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in users.OrderBy(u => u.DisplayName))
                            {
                                <tr class="@(user.IsDisabled ? "table-danger" : "")">
                                    <td>
                                        <div class="fw-bold">@user.DisplayName</div>
                                        <div class="small text-muted">@user.Email</div>
                                        <div class="small text-muted fw-normal d-block d-md-none">@user.Id</div>
                                    </td>
                                    <td>
                                        <div class="dropdown">
                                            <button class="btn btn-sm dropdown-toggle @GetRoleBadgeClass(user.AppRole)" type="button" id="roleDropdown-@user.Id" data-bs-toggle="dropdown" aria-expanded="false">
                                                @user.AppRole
                                            </button>
                                            <ul class="dropdown-menu" aria-labelledby="roleDropdown-@user.Id">
                                                <li><a class="dropdown-item" href="javascript:void(0)" @onclick="() => UpdateRole(user, Constants.Roles.Player)">Player</a></li>
                                                <li><a class="dropdown-item" href="javascript:void(0)" @onclick="() => UpdateRole(user, Constants.Roles.Admin)">Admin</a></li>
                                                <li><hr class="dropdown-divider"></li>
                                                <li><a class="dropdown-item text-danger" href="javascript:void(0)" @onclick="() => UpdateRole(user, Constants.Roles.SuperAdmin)">SuperAdmin</a></li>
                                            </ul>
                                        </div>
                                    </td>
                                    <td>
                                        @if (user.IsDisabled)
                                        {
                                            <span class="badge bg-danger">
                                                <i class="bi bi-slash-circle"></i> Disabled
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-success">Active</span>
                                        }
                                    </td>
                                    <td class="text-end pe-3">
                                        <button class="btn btn-sm @(user.IsDisabled ? "btn-outline-success" : "btn-outline-danger")" 
                                                @onclick="() => ToggleUser(user)"
                                                title="@(user.IsDisabled ? "Enable User" : "Disable User")">
                                            @if (user.IsDisabled)
                                            {
                                                <span><i class="bi bi-check-circle"></i> Enable</span>
                                            }
                                            else
                                            {
                                                <span><i class="bi bi-slash-circle"></i> Disable</span>
                                            }
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="card-footer text-muted small">
                Total Users: @users.Count
            </div>
        </div>
    }
</div>

@inject IJSRuntime JS

@code {
    private List<UserProfile>? users;
    private bool isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        await LoadUsers();
    }

    private async Task LoadUsers()
    {
        try
        {
            isLoading = true;
            // Target the standard UserFunctions endpoint
            users = await Http.GetFromJsonAsync<List<UserProfile>>("api/GetUsers");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading users: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task ToggleUser(UserProfile user)
    {
        bool originalState = user.IsDisabled;
        user.IsDisabled = !user.IsDisabled;

        try
        {
            var response = await Http.PostAsync($"api/ToggleUserStatus?userId={user.Id}", null);
            if (!response.IsSuccessStatusCode)
            {
                user.IsDisabled = originalState;
                Console.WriteLine("Failed to toggle status");
            }
        }
        catch (Exception ex)
        {
             user.IsDisabled = originalState;
            Console.WriteLine($"Error: {ex.Message}");
        }
    }

    private string GetRoleBadgeClass(string role)
    {
        return role switch
        {
            Constants.Roles.SuperAdmin => "btn-danger",
            Constants.Roles.Admin => "btn-warning text-dark",
            _ => "btn-outline-secondary"
        };
    }

    private async Task UpdateRole(UserProfile user, string newRole)
    {
        if (user.AppRole == newRole) return;

        bool confirmed = await JS.InvokeAsync<bool>("confirm", $"Are you sure you want to change {user.DisplayName}'s role to {newRole}?");
        
        if (!confirmed) return;

        var originalRole = user.AppRole;
        user.AppRole = newRole;

        try
        {
            var response = await Http.PostAsync($"api/UpdateUserRole?userId={user.Id}&role={newRole}", null);
            if (!response.IsSuccessStatusCode)
            {
                 user.AppRole = originalRole;
                 string msg = await response.Content.ReadAsStringAsync();
                 await JS.InvokeVoidAsync("alert", $"Failed to update role: {msg}");
            }
        }
        catch (Exception ex)
        {
             user.AppRole = originalRole;
             await JS.InvokeVoidAsync("alert", $"Error: {ex.Message}");
        }
    }
}
