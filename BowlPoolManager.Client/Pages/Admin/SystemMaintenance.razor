@page "/admin/maintenance"
@using BowlPoolManager.Core
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Roles = "SuperAdmin")]
@inject HttpClient Http

<PageTitle>System Maintenance</PageTitle>

<div class="container-fluid mt-3 px-4">
    <div class="d-flex justify-content-between align-items-end mb-3">
        <div class="d-flex flex-column gap-2">
            <div class="d-flex align-items-center gap-3">
                <h1 class="h3 fw-bold mb-0"><i class="bi bi-hdd-network text-danger"></i> System Maintenance</h1>
            </div>
        </div>
        <a href="admin/dashboard" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Dashboard
        </a>
    </div>

    <div class="alert alert-warning border-warning border-2">
        <i class="bi bi-exclamation-triangle-fill me-2"></i>
        <strong>Safety Check:</strong> The actions on this page affect the core infrastructure of the application. Proceed with caution.
    </div>

    <div class="card shadow-sm border-0 mb-4">
        <div class="card-header bg-white fw-bold">
            Database Operations
        </div>
        <div class="card-body">
            <h5 class="card-title">Initialize Database Resources</h5>
            <p class="card-text text-muted">
                This operation verifies that all required Cosmos DB containers exist. 
                It is <strong>idempotent</strong> and will not overwrite existing data, but it connects to the database management plane.
                Use this when deploying to a new environment or if you observe "Container not found" errors.
            </p>
            
            <button class="btn btn-danger" @onclick="InitializeDb" disabled="@isInitializing">
                @if (isInitializing)
                {
                    <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                    <span> Verifying Infrastructure...</span>
                }
                else
                {
                    <span>Initialize Database</span>
                }
            </button>

            @if (!string.IsNullOrEmpty(initializationMessage))
            {
                <div class="mt-3 p-2 rounded @(isSuccess ? "bg-success-subtle text-success" : "bg-danger-subtle text-danger") border @(isSuccess ? "border-success" : "border-danger")">
                    <i class="bi @(isSuccess ? "bi-check-circle-fill" : "bi-x-circle-fill") me-2"></i>
                    <strong>@initializationMessage</strong>
                </div>
            }
        </div>
    </div>
</div>

@code {
    private bool isInitializing = false;
    private string? initializationMessage;
    private bool isSuccess = false;

    private async Task InitializeDb()
    {
        isInitializing = true;
        initializationMessage = null;
        isSuccess = false;
        StateHasChanged();

        try
        {
            var response = await Http.PostAsync("api/Admin/Initialize", null);
            if (response.IsSuccessStatusCode)
            {
                isSuccess = true;
                initializationMessage = "Success! Database resources verified and initialized.";
            }
            else
            {
                isSuccess = false;
                initializationMessage = $"Error: {response.StatusCode} - {await response.Content.ReadAsStringAsync()}";
            }
        }
        catch (Exception ex)
        {
            isSuccess = false;
            initializationMessage = $"Exception: {ex.Message}";
        }
        finally
        {
            isInitializing = false;
            StateHasChanged();
        }
    }
}
