@page "/admin/linker"
@using BowlPoolManager.Core.Domain
@using BowlPoolManager.Core.Dtos
@inject HttpClient Http
@inject NavigationManager Nav

<h3 class="mb-4">ðŸ”— Game Linker (Smart Mode)</h3>

@if (IsLoading)
{
    <div class="spinner-border text-primary" role="status">
        <span class="visually-hidden">Loading...</span>
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    <th>Local Game</th>
                    <th>Date</th>
                    <th>Current Link</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var game in LocalGames)
                {
                    <tr class="@(IsLinked(game) ? "table-success" : "")">
                        <td>
                            <strong>@game.BowlName</strong><br/>
                            <span class="text-muted small">@game.TeamHome vs @game.TeamAway</span>
                        </td>
                        <td>@game.StartTime.ToLocalTime().ToString("MMM dd, h:mm tt")</td>
                        <td>
                            @if(IsLinked(game))
                            {
                                <span class="badge bg-success">Linked: @game.ExternalId</span>
                            }
                            else
                            {
                                <span class="badge bg-warning text-dark">Unlinked</span>
                            }
                        </td>
                        <td>
                            <button class="btn btn-outline-primary btn-sm" @onclick="() => OpenLinkModal(game)">
                                @(IsLinked(game) ? "Edit Link" : "Link Game")
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

@if (ShowModal)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Link Game: @SelectedLocalGame?.BowlName</h5>
                    <button type="button" class="btn-close" @onclick="CloseModal"></button>
                </div>
                <div class="modal-body">
                    
                    <div class="mb-3">
                        <label class="form-label fw-bold">Select Matching API Game:</label>
                        <select class="form-select" @onchange="OnApiGameSelected">
                            <option value="">-- Choose Game --</option>
                            @foreach (var ext in ExternalGames)
                            {
                                <option value="@ext.Id" selected="@(SelectedApiGame?.Id == ext.Id)">
                                    @FormatApiGameLabel(ext)
                                </option>
                            }
                        </select>
                    </div>

                    @if (SelectedApiGame != null && SelectedLocalGame != null)
                    {
                        <div class="card bg-light mb-3">
                            <div class="card-body">
                                <h6 class="card-title text-uppercase text-muted small fw-bold">Validation</h6>
                                <div class="row align-items-center text-center">
                                    <div class="col-5">
                                        <div class="fw-bold">Local Data</div>
                                        <div class="text-primary">@SelectedLocalGame.TeamHome</div>
                                        <div class="text-primary">@SelectedLocalGame.TeamAway</div>
                                    </div>
                                    <div class="col-2">
                                        <span class="oi oi-arrow-right"></span>
                                    </div>
                                    <div class="col-5">
                                        <div class="fw-bold">API Data</div>
                                        <div class="text-success">@SelectedApiGame.HomeTeam</div>
                                        <div class="text-success">@SelectedApiGame.AwayTeam</div>
                                    </div>
                                </div>
                                
                                <hr/>

                                @if (NamesMatch)
                                {
                                    <div class="alert alert-success py-2 mb-0">
                                        <span class="oi oi-check"></span> <strong>Perfect Match!</strong> Team names are identical.
                                    </div>
                                }
                                else
                                {
                                    <div class="alert alert-warning py-2 mb-2">
                                        <span class="oi oi-warning"></span> <strong>Name Mismatch</strong><br/>
                                        Local names differ from API names.
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" id="syncNames" @bind="SyncTeamNames">
                                        <label class="form-check-label fw-bold" for="syncNames">
                                            Update local team names to match API?
                                        </label>
                                        <div class="form-text">Recommended for consistent scoring updates.</div>
                                    </div>
                                }
                            </div>
                        </div>
                    }

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CloseModal">Cancel</button>
                    <button type="button" class="btn btn-primary" 
                            disabled="@(SelectedApiGame == null || IsSaving)"
                            @onclick="SaveLink">
                        @if (IsSaving) { <span>Saving...</span> } else { <span>Confirm Link</span> }
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private bool IsLoading = true;
    private bool IsSaving = false;
    
    // Modal State
    private bool ShowModal = false;
    private BowlGame? SelectedLocalGame;
    private CfbdGameDto? SelectedApiGame;
    private bool SyncTeamNames = false;

    private List<BowlGame> LocalGames = new();
    private List<CfbdGameDto> ExternalGames = new();

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        IsLoading = true;
        try
        {
            LocalGames = await Http.GetFromJsonAsync<List<BowlGame>>("api/GetGames") ?? new();
            ExternalGames = await Http.GetFromJsonAsync<List<CfbdGameDto>>("api/GetExternalGames") ?? new();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading data: {ex.Message}");
        }
        finally
        {
            IsLoading = false;
        }
    }

    private bool IsLinked(BowlGame game) => !string.IsNullOrEmpty(game.ExternalId);

    private string FormatApiGameLabel(CfbdGameDto game)
    {
        // Format: "Rose Bowl: Michigan vs Washington"
        var label = $"{game.Notes ?? "Bowl Game"}: {game.HomeTeam} vs {game.AwayTeam}";
        return label;
    }

    private void OpenLinkModal(BowlGame game)
    {
        SelectedLocalGame = game;
        SelectedApiGame = null;
        SyncTeamNames = false;
        
        // If already linked, try to pre-select the API game
        if (!string.IsNullOrEmpty(game.ExternalId))
        {
            var match = ExternalGames.FirstOrDefault(x => x.Id.ToString() == game.ExternalId);
            if (match != null)
            {
                SelectedApiGame = match;
                CheckNameMatch();
            }
        }

        ShowModal = true;
    }

    private void CloseModal()
    {
        ShowModal = false;
        SelectedLocalGame = null;
        SelectedApiGame = null;
    }

    private void OnApiGameSelected(ChangeEventArgs e)
    {
        var idStr = e.Value?.ToString();
        if (int.TryParse(idStr, out int id))
        {
            SelectedApiGame = ExternalGames.FirstOrDefault(x => x.Id == id);
            // Default to syncing names if there is a mismatch
            CheckNameMatch();
            if (!NamesMatch) SyncTeamNames = true;
        }
        else
        {
            SelectedApiGame = null;
        }
    }

    private bool NamesMatch = true;

    private void CheckNameMatch()
    {
        if (SelectedLocalGame == null || SelectedApiGame == null) return;
        
        bool homeMatch = string.Equals(SelectedLocalGame.TeamHome, SelectedApiGame.HomeTeam, StringComparison.OrdinalIgnoreCase);
        bool awayMatch = string.Equals(SelectedLocalGame.TeamAway, SelectedApiGame.AwayTeam, StringComparison.OrdinalIgnoreCase);

        NamesMatch = homeMatch && awayMatch;
    }

    private async Task SaveLink()
    {
        if (SelectedLocalGame == null || SelectedApiGame == null) return;

        IsSaving = true;

        // 1. Update Link
        SelectedLocalGame.ExternalId = SelectedApiGame.Id.ToString();

        // 2. Optional: Sync Names
        if (SyncTeamNames)
        {
            SelectedLocalGame.TeamHome = SelectedApiGame.HomeTeam ?? SelectedLocalGame.TeamHome;
            SelectedLocalGame.TeamAway = SelectedApiGame.AwayTeam ?? SelectedLocalGame.TeamAway;
        }

        try
        {
            var response = await Http.PostAsJsonAsync("api/SaveGame", SelectedLocalGame);
            if (response.IsSuccessStatusCode)
            {
                // UI Refresh not strictly needed if we updated the object reference, but good for safety
                CloseModal();
            }
            else
            {
                Console.WriteLine("Failed to save.");
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error: {ex.Message}");
        }
        finally
        {
            IsSaving = false;
        }
    }
}
