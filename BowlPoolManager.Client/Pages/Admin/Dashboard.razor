@page "/admin/dashboard"
@using BowlPoolManager.Core.Domain
@using BowlPoolManager.Core
@using Microsoft.AspNetCore.Authorization
@using System.Net.Http.Json
@attribute [Authorize(Roles = Constants.Roles.SuperAdmin)]
@inject HttpClient Http

<PageTitle>Admin Dashboard</PageTitle>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Pool Administration</h1>
        <span class="badge bg-danger">Super Admin Zone</span>
    </div>

    <div class="card mb-5 shadow-sm">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Create New Pool</h5>
        </div>
        <div class="card-body">
            <EditForm Model="@newPool" OnValidSubmit="HandleCreatePool">
                <DataAnnotationsValidator />
                
                <div class="row g-3">
                    <div class="col-md-6">
                        <label for="poolName" class="form-label">Pool Name</label>
                        <InputText id="poolName" class="form-control" @bind-Value="newPool.Name" placeholder="e.g. Nash Family Bowl 2025" />
                    </div>
                    
                    <div class="col-md-3">
                        <label for="inviteCode" class="form-label">Invite Code</label>
                        <InputText id="inviteCode" class="form-control" @bind-Value="newPool.InviteCode" placeholder="Secret Invite Code" />
                    </div>

                    <div class="col-md-3">
                        <label for="poolSeason" class="form-label">Season</label>
                        <InputNumber id="poolSeason" class="form-control" @bind-Value="newPool.Season" />
                    </div>
                </div>

                <div class="mt-3 text-end">
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-plus-circle"></i> Create Pool
                    </button>
                </div>
            </EditForm>
        </div>
    </div>

    <h3 class="mb-3">Existing Pools</h3>
    @if (pools == null)
    {
        <div class="alert alert-info">Loading pools...</div>
    }
    else if (!pools.Any())
    {
        <div class="alert alert-warning">No pools found. Create one above!</div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover border">
                <thead class="table-light">
                    <tr>
                        <th>Name</th>
                        <th>Season</th>
                        <th>Invite Code</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var pool in pools)
                    {
                        <tr>
                            <td><strong>@pool.Name</strong></td>
                            <td>@pool.Season</td>
                            <td><code>@pool.InviteCode</code></td>
                            <td class="text-end">
                                <button class="btn btn-sm btn-outline-primary" disabled title="Coming Soon">Edit</button>
                                <button class="btn btn-sm btn-outline-danger" disabled title="Coming Soon">Delete</button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

@code {
    private List<BowlPool>? pools;
    private BowlPool newPool = new BowlPool { Season = DateTime.Now.Year };

    protected override async Task OnInitializedAsync()
    {
        await LoadPools();
    }

    private async Task LoadPools()
    {
        try
        {
            pools = await Http.GetFromJsonAsync<List<BowlPool>>("api/GetPools");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"[Dashboard] Error loading pools: {ex.Message}");
        }
    }

    private async Task HandleCreatePool()
    {
        try 
        {
            var response = await Http.PostAsJsonAsync("api/CreatePool", newPool);
            if (response.IsSuccessStatusCode)
            {
                // Reset form and reload list
                newPool = new BowlPool { Season = DateTime.Now.Year }; 
                await LoadPools();
            }
            else
            {
                Console.WriteLine($"[Dashboard] Creation failed: {response.StatusCode}");
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"[Dashboard] Error creating pool: {ex.Message}");
        }
    }
}
