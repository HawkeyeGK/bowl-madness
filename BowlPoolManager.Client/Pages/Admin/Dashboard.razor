@page "/admin/dashboard"
@using BowlPoolManager.Core.Domain
@using BowlPoolManager.Core
@using Microsoft.AspNetCore.Authorization
@using System.Net.Http.Json
@using BowlPoolManager.Client.Helpers
@attribute [Authorize(Roles = Constants.Roles.SuperAdmin)]
@inject HttpClient Http
@inject NavigationManager Nav

<PageTitle>Admin Dashboard</PageTitle>

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h2"><i class="bi bi-speedometer2"></i> Admin Dashboard</h1>
        <button class="btn btn-primary" @onclick="() => EditPool(new BowlPool())">
            <i class="bi bi-plus-circle"></i> New Pool
        </button>
    </div>

    @if (isLoading)
    {
        <div class="d-flex justify-content-center">
            <div class="spinner-border text-primary" role="status"><span class="visually-hidden">Loading...</span></div>
        </div>
    }
    else
    {
        @* --- SECTION 1: POOL MANAGEMENT --- *@
        <div class="row mb-5">
            <div class="col-12">
                <div class="card shadow-sm">
                    <div class="card-header bg-dark text-white">
                        <i class="bi bi-collection-fill me-2"></i> Active Pools
                    </div>
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover mb-0 align-middle">
                                <thead class="table-light">
                                    <tr>
                                        <th>Name</th>
                                        <th>Season</th>
                                        <th>Invite Code</th>
                                        <th>Lock Date (Central)</th>
                                        <th class="text-end">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var pool in pools)
                                    {
                                        <tr>
                                            <td class="fw-bold">@pool.Name</td>
                                            <td>@pool.Season</td>
                                            <td><code class="text-primary">@pool.InviteCode</code></td>
                                            <td>
                                                @DateTimeHelper.ToCentral(pool.LockDate).ToString("g")
                                                @if(DateTime.UtcNow > pool.LockDate)
                                                {
                                                    <span class="badge bg-danger ms-2">LOCKED</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-success ms-2">OPEN</span>
                                                }
                                            </td>
                                            <td class="text-end">
                                                <button class="btn btn-sm btn-outline-secondary" @onclick="() => EditPool(pool)">
                                                    <i class="bi bi-pencil"></i> Edit
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        @* --- SECTION 2: QUICK LINKS --- *@
        <h3 class="h5 text-muted mb-3">Management Tools</h3>
        <div class="row g-4">
            @* GAMES *@
            <div class="col-md-6 col-lg-3">
                <div class="card shadow-sm h-100">
                    <div class="card-body text-center">
                        <i class="bi bi-calendar-event display-4 text-success mb-3"></i>
                        <h5 class="card-title h5">Games</h5>
                        <p class="card-text text-muted small">Manage schedules & times.</p>
                        <a href="admin/games" class="btn btn-outline-success stretched-link">Manage Games</a>
                    </div>
                </div>
            </div>
            
            @* USERS *@
            <div class="col-md-6 col-lg-3">
                <div class="card shadow-sm h-100">
                    <div class="card-body text-center">
                        <i class="bi bi-people display-4 text-primary mb-3"></i>
                        <h5 class="card-title h5">Users</h5>
                        <p class="card-text text-muted small">View users & roles.</p>
                        <a href="admin/users" class="btn btn-outline-primary stretched-link">Manage Users</a>
                    </div>
                </div>
            </div>

            @* ENTRIES *@
             <div class="col-md-6 col-lg-3">
                <div class="card shadow-sm h-100">
                    <div class="card-body text-center">
                        <i class="bi bi-list-check display-4 text-warning mb-3"></i>
                        <h5 class="card-title h5">Entries</h5>
                        <p class="card-text text-muted small">Manage player brackets.</p>
                        <a href="admin/entries" class="btn btn-outline-warning stretched-link">Manage Entries</a>
                    </div>
                 </div>
            </div>

            @* RESULTS (NEW) *@
            <div class="col-md-6 col-lg-3">
                <div class="card shadow-sm h-100">
                    <div class="card-body text-center">
                        <i class="bi bi-trophy-fill display-4 text-danger mb-3"></i>
                        <h5 class="card-title h5">Results</h5>
                        <p class="card-text text-muted small">Enter scores & winners.</p>
                        <a href="admin/results" class="btn btn-outline-danger stretched-link">Enter Results</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@* MODAL FOR POOL EDITING *@
@if (showModal && editingPool != null)
{
    <div class="modal fade show d-block" style="background: rgba(0,0,0,0.5)">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">@(string.IsNullOrEmpty(editingPool.Id) ? "Create" : "Edit") Pool</h5>
                    <button type="button" class="btn-close" @onclick="CloseModal"></button>
                </div>
                <EditForm Model="editingPool" OnValidSubmit="SavePool">
                    <div class="modal-body">
                        <div class="mb-3">
                            <label class="form-label">Pool Name</label>
                            <InputText @bind-Value="editingPool.Name" class="form-control" placeholder="e.g. Office Pool" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Season</label>
                            <InputNumber @bind-Value="editingPool.Season" class="form-control" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Invite Code</label>
                            <InputText @bind-Value="editingPool.InviteCode" class="form-control" placeholder="Secret password" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Lock Date (Central Time)</label>
                            <InputText type="datetime-local" class="form-control" @bind-Value="lockDateString" />
                            <div class="form-text">Picks cannot be changed after this time.</div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" @onclick="CloseModal">Cancel</button>
                        <button type="submit" class="btn btn-primary">Save Pool</button>
                    </div>
                </EditForm>
            </div>
        </div>
    </div>
}

@code {
    private List<BowlPool> pools = new();
    private BowlPool? editingPool;
    private bool isLoading = true;
    private bool showModal = false;
    private string lockDateString = ""; // For binding datetime-local

    protected override async Task OnInitializedAsync()
    {
        await LoadPools();
    }

    private async Task LoadPools()
    {
        isLoading = true;
        try
        {
            pools = await Http.GetFromJsonAsync<List<BowlPool>>("api/GetPools") ?? new();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private void EditPool(BowlPool pool)
    {
        if (string.IsNullOrEmpty(pool.Id))
        {
            pool.LockDate = DateTime.UtcNow.AddDays(7);
            pool.Season = DateTime.Now.Year;
        }
        
        editingPool = pool;
        // Convert UTC -> Central String for Input
        var central = DateTimeHelper.ToCentral(pool.LockDate);
        lockDateString = central.ToString("yyyy-MM-ddTHH:mm");
        
        showModal = true;
    }

    private void CloseModal()
    {
        showModal = false;
        editingPool = null;
    }

    private async Task SavePool()
    {
        if (editingPool == null) return;

        // Convert Input String (Central) -> UTC
        if (DateTime.TryParse(lockDateString, out DateTime parsedLocal))
        {
            editingPool.LockDate = DateTimeHelper.FromCentral(parsedLocal);
        }
        else 
        {
            return;
        }

        // Use the generic "CreatePool" or equivalent API if exists, usually upsert via AddPool logic
        // Assuming "CreatePool" maps to the functionality or we reuse a generic save
        var response = await Http.PostAsJsonAsync("api/CreatePool", editingPool);
        
        if (response.IsSuccessStatusCode)
        {
            showModal = false;
            await LoadPools();
        }
    }
}
