@page "/admin/dashboard"
@using BowlPoolManager.Core.Domain
@using BowlPoolManager.Core
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Roles = Constants.Roles.SuperAdmin)]

<PageTitle>Admin Dashboard</PageTitle>

<div class="container mt-4">
    <h1 class="mb-4"><i class="bi bi-speedometer2"></i> Admin Dashboard</h1>

    <div class="row g-4">
        @* MANAGE USERS *@
        <div class="col-md-6 col-lg-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center">
                    <i class="bi bi-people-fill display-4 text-primary mb-3"></i>
                    <h3 class="card-title h5">Users</h3>
                    <p class="card-text text-muted">Manage registered users and roles.</p>
                    <a href="admin/users" class="btn btn-outline-primary stretched-link">Manage Users</a>
                </div>
            </div>
        </div>

        @* MANAGE GAMES *@
        <div class="col-md-6 col-lg-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center">
                    <i class="bi bi-calendar-event-fill display-4 text-success mb-3"></i>
                    <h3 class="card-title h5">Games</h3>
                    <p class="card-text text-muted">Manage bowl games and schedules.</p>
                    <a href="admin/games" class="btn btn-outline-success stretched-link">Manage Games</a>
                </div>
            </div>
        </div>

        @* MANAGE ENTRIES *@
        <div class="col-md-6 col-lg-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center">
                    <i class="bi bi-list-check display-4 text-warning mb-3"></i>
                    <h3 class="card-title h5">Entries</h3>
                    <p class="card-text text-muted">View and manage player brackets.</p>
                    <a href="admin/entries" class="btn btn-outline-warning stretched-link">Manage Entries</a>
                </div>
            </div>
        </div>

        @* ENTER RESULTS *@
        <div class="col-md-6 col-lg-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center">
                    <i class="bi bi-pencil-square display-4 text-danger mb-3"></i>
                    <h3 class="card-title h5">Results</h3>
                    <p class="card-text text-muted">Enter game scores and outcomes.</p>
                    <a href="admin/results" class="btn btn-outline-danger stretched-link">Enter Results</a>
                </div>
            </div>
        </div>
    </div>
</div>
