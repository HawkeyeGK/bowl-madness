@page "/admin/pools"
@using BowlPoolManager.Core.Domain
@using BowlPoolManager.Core
@using Microsoft.AspNetCore.Authorization
@using System.Net.Http.Json

@using BowlPoolManager.Client.Services
@attribute [Authorize(Roles = Constants.Roles.SuperAdmin)]
@inject IPoolService PoolService
@inject ISeasonService SeasonService
@inject IJSRuntime JS 
@inject HttpClient Http 

<PageTitle>Pool Administration</PageTitle>

<div class="container-fluid mt-3 px-4">
    <div class="d-flex justify-content-between align-items-end mb-3">
        <div class="d-flex flex-column gap-2">
            <div class="d-flex align-items-center gap-3">
                <h1 class="h3 fw-bold mb-0"><i class="bi bi-collection-play text-primary"></i> Pool Settings</h1>
            </div>
        </div>
        <button class="btn btn-primary" @onclick="() => EditPool(new BowlPool())">
            <i class="bi bi-plus-lg"></i> New Pool
        </button>
    </div>

    @if (isLoading)
    {
        <div class="d-flex justify-content-center">
            <div class="spinner-border text-primary" role="status"><span class="visually-hidden">Loading...</span></div>
        </div>
    }
    else
    {
        <div class="card shadow-sm">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Name</th>
                                <th>Season</th>
                                <th>Status</th>
                                <th>Invite Code</th>
                                <th>Lock Date (Central)</th>
                                <th class="text-end">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var pool in pools.OrderByDescending(p => p.Season))
                            {
                                <tr>
                                    <td class="fw-bold">@pool.Name</td>
                                    <td>@(seasons.FirstOrDefault(s => s.Id == pool.SeasonId)?.Name ?? pool.Season.ToString())</td>
                                    <td>
                                        @if(pool.IsArchived)
                                        {
                                            <span class="badge bg-secondary">ARCHIVED</span>
                                        }
                                        else if (pool.IsConcluded)
                                        {
                                            <span class="badge bg-warning text-dark">CONCLUDED</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-success">ACTIVE</span>
                                        }
                                    </td>
                                    <td><code class="text-primary">@pool.InviteCode</code></td>
                                    <td>
                                        @DateTimeHelper.ToCentral(pool.LockDate).ToString("g")
                                        @if(DateTime.UtcNow > pool.LockDate && !pool.IsConcluded)
                                        {
                                            <span class="badge bg-danger ms-2">LOCKED</span>
                                        }
                                    </td>
                                    <td class="text-end">
                                        @* ACTION BUTTONS *@
                                        @if (!pool.IsArchived)
                                        {
                                            <button class="btn btn-sm @(pool.IsConcluded ? "btn-outline-success" : "btn-outline-warning") me-1" 
                                                    @onclick="() => ToggleConclusion(pool)" 
                                                    title="@(pool.IsConcluded ? "Reopen Pool" : "Conclude Pool")">
                                                <i class="bi @(pool.IsConcluded ? "bi-unlock" : "bi-lock")"></i>
                                            </button>
                                        }

                                        @if (pool.IsArchived)
                                        {
                                            <a href="history/@pool.Id" class="btn btn-sm btn-info me-1" title="View Archive">
                                                <i class="bi bi-eye"></i> View
                                            </a>
                                            <button class="btn btn-sm btn-outline-warning me-1" 
                                                    disabled="@(!pool.IsConcluded)"
                                                    @onclick="() => ArchivePool(pool)"
                                                    title="Re-Archive Pool">
                                                <i class="bi bi-arrow-repeat"></i>
                                            </button>
                                        }
                                        else
                                        {
                                            <button class="btn btn-sm btn-outline-info me-1" 
                                                    disabled="@(!pool.IsConcluded)"
                                                    @onclick="() => ArchivePool(pool)"
                                                    title="Archive Pool">
                                                <i class="bi bi-archive"></i>
                                            </button>
                                        }

                                        <button class="btn btn-sm btn-outline-primary" @onclick="() => EditPool(pool)">
                                            <i class="bi bi-pencil"></i> Edit
                                        </button>
                                        
                                        <button class="btn btn-sm btn-outline-danger ms-1" @onclick="() => DeletePool(pool)" title="Delete Pool">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>

@* MODAL FOR POOL EDITING *@
@if (showModal && editingPool != null)
{
    <div class="modal fade show d-block" style="background: rgba(0,0,0,0.5)">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">@(string.IsNullOrEmpty(editingPool.Id) ? "Create" : "Edit") Pool</h5>
                    <button type="button" class="btn-close" @onclick="CloseModal"></button>
                </div>
                <EditForm Model="editingPool" OnValidSubmit="SavePool">
                    <div class="modal-body">
                        <div class="mb-3">
                            <label class="form-label">Pool Name</label>
                            <InputText @bind-Value="editingPool.Name" class="form-control" placeholder="e.g. Office Pool" />
                        </div>
                        
                        <div class="mb-3">
                            <label class="form-label">Tiebreaker Game</label>
                            <InputSelect @bind-Value="editingPool.TieBreakerGameId" class="form-select">
                                <option value="">-- Select Tiebreaker Game --</option>
                                @foreach (var g in seasonGames.OrderBy(x => x.StartTime))
                                {
                                    <option value="@g.Id">@g.BowlName (@g.TeamHome vs @g.TeamAway)</option>
                                }
                            </InputSelect>
                            <div class="form-text">The score of this game will be used as the tiebreaker.</div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">TieBreaker Logic</label>
                            <div class="row">
                                <div class="col-6">
                                    <label class="form-label small text-muted">Primary Rank</label>
                                    <InputSelect @bind-Value="editingPool.PrimaryTieBreaker" class="form-select form-select-sm">
                                        @foreach (var metric in Enum.GetValues(typeof(TieBreakerMetric)))
                                        {
                                            <option value="@metric">@metric</option>
                                        }
                                    </InputSelect>
                                </div>
                                <div class="col-6">
                                    <label class="form-label small text-muted">Secondary Rank</label>
                                    <InputSelect @bind-Value="editingPool.SecondaryTieBreaker" class="form-select form-select-sm">
                                        @foreach (var metric in Enum.GetValues(typeof(TieBreakerMetric)))
                                        {
                                            <option value="@metric">@metric</option>
                                        }
                                    </InputSelect>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Season</label>
                            <InputSelect Value="@editingPool.SeasonId" 
                                         ValueChanged="@((string s) => OnSeasonChanged(s))" 
                                         ValueExpression="@(() => editingPool.SeasonId)" 
                                         class="form-select">
                                @if (seasons != null)
                                {
                                    @foreach (var s in seasons)
                                    {
                                        <option value="@s.Id">@s.Name</option>
                                    }
                                }
                            </InputSelect>
                        </div>
                        
                        @* GAME SELECTION *@
                        <div class="mb-3">
                            <label class="form-label d-block">Included Games</label>
                            
                            @if (seasonGames == null)
                            {
                                <div class="text-muted small">Select a season to load games...</div>
                            }
                            else if (!seasonGames.Any())
                            {
                                <div class="alert alert-warning py-2 mb-0 small">No games found for this season.</div>
                            }
                            else
                            {
                                <div class="d-flex gap-2 mb-2">
                                    <button type="button" class="btn btn-sm btn-outline-secondary" @onclick="SelectAllGames">All</button>
                                    <button type="button" class="btn btn-sm btn-outline-secondary" @onclick="DeselectAllGames">None</button>
                                </div>
                                <div class="border rounded p-2" style="max-height: 200px; overflow-y: auto;">
                                    @foreach (var game in seasonGames.OrderBy(g => g.StartTime))
                                    {
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" 
                                                   id="game_@game.Id" 
                                                   checked="@(editingPool.GameIds.Contains(game.Id))"
                                                   @onchange="@(e => ToggleGame(game.Id, e.Value))" />
                                            <label class="form-check-label small" for="game_@game.Id">
                                                <strong>@game.BowlName</strong> 
                                                <span class="text-muted">(@game.TeamHome vs @game.TeamAway)</span>
                                            </label>
                                        </div>
                                    }
                                </div>
                                <div class="form-text">@editingPool.GameIds.Count games selected</div>
                            }
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Invite Code</label>
                            <InputText @bind-Value="editingPool.InviteCode" class="form-control" placeholder="Secret password" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Lock Date (Central Time)</label>
                            <InputText type="datetime-local" class="form-control" @bind-Value="lockDateString" />
                            <div class="form-text">Picks cannot be changed after this time.</div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" @onclick="CloseModal">Cancel</button>
                        <button type="submit" class="btn btn-primary">Save Pool</button>
                    </div>
                </EditForm>
            </div>
        </div>
    </div>
}

@code {
    private List<BowlPool> pools = new();
    private List<Season> seasons = new();
    private List<BowlGame> seasonGames = new();
    private BowlPool? editingPool;
    private bool isLoading = true;
    private bool showModal = false;
    private string lockDateString = "";

    protected override async Task OnInitializedAsync()
    {
        await LoadSeasons();
        await LoadPools();
    }

    private async Task LoadPools()
    {
        isLoading = true;
        try
        {
            pools = await PoolService.GetPoolsAsync();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task LoadSeasons()
    {
        try
        {
            seasons = await SeasonService.GetSeasonsAsync();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading seasons: {ex.Message}");
        }
    }

    private void EditPool(BowlPool pool)
    {
        if (string.IsNullOrEmpty(pool.Id))
        {
            pool.LockDate = DateTime.UtcNow.AddDays(7);
            // Default to current season
            var current = seasons.FirstOrDefault(s => s.IsCurrent);
            if (current != null)
            {
                pool.SeasonId = current.Id;
                pool.Season = int.Parse(current.Id);
            }
            else 
            {
                pool.Season = DateTime.Now.Year;
                pool.SeasonId = pool.Season.ToString();
            }
            // Initialize GameIds
            pool.GameIds = new List<string>();
        }
        
        editingPool = pool;
        
        // Load games for the initial season
        _ = LoadGamesForSeason(editingPool.SeasonId);

        var central = DateTimeHelper.ToCentral(pool.LockDate);
        lockDateString = central.ToString("yyyy-MM-ddTHH:mm");
        
        showModal = true;
    }

    private async Task OnSeasonChanged(string newSeasonId)
    {
        if (editingPool == null) return;
        
        editingPool.SeasonId = newSeasonId;
        var newSeason = seasons.FirstOrDefault(s => s.Id == newSeasonId);
        if (newSeason != null && int.TryParse(newSeason.SeasonId, out int year))
        {
            editingPool.Season = year;
        }

        // Reload games for the new season
        await LoadGamesForSeason(newSeasonId);
        
        // Optional: Auto-select all games for new pools? 
        // For now, let's just clear selection if switching seasons involves completely different games
        // Or keep IDs if they happen to match (unlikely between seasons)
        // Let's safe-guard: available games list changed, IDs might be invalid, but user can manage.
    }

    private async Task LoadGamesForSeason(string seasonId)
    {
        try
        {
            seasonGames = await Http.GetFromJsonAsync<List<BowlGame>>($"api/GetGames?seasonId={seasonId}") ?? new List<BowlGame>();
            
            // If NEW pool, auto-select all games by default for convenience
            if (string.IsNullOrEmpty(editingPool?.Id) && editingPool != null && !editingPool.GameIds.Any())
            {
               editingPool.GameIds = seasonGames.Select(g => g.Id).ToList();
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading games: {ex.Message}");
            seasonGames = new List<BowlGame>();
        }
        StateHasChanged();
    }

    private void ToggleGame(string gameId, object? checkedValue)
    {
        if (editingPool == null) return;
        
        bool isChecked = (bool)(checkedValue ?? false);
        if (isChecked && !editingPool.GameIds.Contains(gameId))
        {
            editingPool.GameIds.Add(gameId);
        }
        else if (!isChecked && editingPool.GameIds.Contains(gameId))
        {
            editingPool.GameIds.Remove(gameId);
        }
    }

    private void SelectAllGames()
    {
        if (editingPool == null) return;
        foreach(var g in seasonGames)
        {
            if (!editingPool.GameIds.Contains(g.Id)) editingPool.GameIds.Add(g.Id);
        }
    }

    private void DeselectAllGames()
    {
        if (editingPool == null) return;
        // Only remove games that are in the current season list (preserve others if mixed?)
        // Strictly speaking, a pool usually belongs to one season, so clearing all is fine.
        editingPool.GameIds.Clear();
    }

    private void CloseModal()
    {
        showModal = false;
        editingPool = null;
    }

    private async Task SavePool()
    {
        if (editingPool == null) return;
        if (DateTime.TryParse(lockDateString, out DateTime parsedLocal))
        {
            editingPool.LockDate = DateTimeHelper.FromCentral(parsedLocal);
        }
        else 
        {
            return;
        }

        var seasonObj = seasons.FirstOrDefault(s => s.Id == editingPool.SeasonId);
        if (seasonObj != null && int.TryParse(seasonObj.SeasonId, out int year))
        {
            editingPool.Season = year;
        }

        // Logic split: Create vs Update
        BowlPool? result;
        if (string.IsNullOrEmpty(editingPool.Id))
        {
             result = await PoolService.CreatePoolAsync(editingPool);
        }
        else
        {
             result = await PoolService.UpdatePoolAsync(editingPool);
        }
        
        if (result != null)
        {
            showModal = false;
            await LoadPools();
        }
    }

    private async Task DeletePool(BowlPool pool)
    {
        if (!await JS.InvokeAsync<bool>("confirm", $"Are you sure you want to DELETE '{pool.Name}'? This cannot be undone."))
        {
            return;
        }

        isLoading = true;
        var success = await PoolService.DeletePoolAsync(pool.Id);
        if (success)
        {
            await LoadPools();
        }
        else
        {
             await JS.InvokeVoidAsync("alert", "Failed to delete pool.");
             isLoading = false;
        }
    }

    private async Task ToggleConclusion(BowlPool pool)
    {
        isLoading = true;
        var updatedPool = await PoolService.ToggleConclusionAsync(pool.Id);
        if (updatedPool != null)
        {
            await LoadPools();
        }
        else 
        {
             // Handle error
             isLoading = false;
        }
    }

    private async Task ArchivePool(BowlPool pool)
    {
        var message = pool.IsArchived 
            ? $"Are you sure you want to RE-ARCHIVE '{pool.Name}'? This will OVERWRITE the existing archive with current data." 
            : $"Are you sure you want to archive '{pool.Name}'? This creates a permanent snapshot.";

        if (!await JS.InvokeAsync<bool>("confirm", message))
        {
            return;
        }

        isLoading = true;
        var success = await PoolService.ArchivePoolAsync(pool.Id);
        if (success)
        {
            await LoadPools();
        }
        else
        {
            isLoading = false;
            // Maybe show toast error
        }
    }
}
