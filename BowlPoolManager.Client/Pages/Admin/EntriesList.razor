@page "/admin/entries"
@using BowlPoolManager.Core.Domain
@using BowlPoolManager.Core
@using BowlPoolManager.Client.Helpers
@using BowlPoolManager.Client.Services
@using Microsoft.AspNetCore.Authorization
@using System.Net.Http.Json
@attribute [Authorize(Roles = "SuperAdmin,Admin")]
@inject HttpClient Http
@inject NavigationManager Nav
@inject IJSRuntime JS
@inject ISeasonService SeasonService

<PageTitle>Manage Entries</PageTitle>

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="bi bi-list-check"></i> Manage Entries</h1>
        <div class="d-flex gap-2">
            <a href="/admin/dashboard" class="btn btn-outline-secondary">Dashboard</a>
            <a href="/admin/entry" class="btn btn-primary"><i class="bi bi-plus-lg"></i> New Entry</a>
        </div>
    </div>
    
    @* FILTERS *@
    <div class="card mb-4">
        <div class="card-body py-2">
            <div class="row align-items-center g-3">
                @* Season Filter *@
                <div class="col-auto">
                    <label class="fw-bold me-2">Season:</label>
                    <select class="form-select form-select-sm d-inline-block w-auto" @onchange="OnSeasonFilterChanged" value="@selectedSeasonId">
                        <option value="">All Seasons</option>
                        @foreach (var s in seasons)
                        {
                            <option value="@s.Id">@s.Name @(s.IsCurrent ? "(Current)" : "")</option>
                        }
                    </select>
                </div>

                @* Pool Filter *@
                <div class="col-auto">
                    <label class="fw-bold me-2">Pool:</label>
                    <select class="form-select form-select-sm d-inline-block w-auto" @onchange="OnPoolFilterChanged" value="@selectedPoolId">
                        <option value="">-- All Pools --</option>
                        @foreach (var pool in FilteredPoolOptions)
                        {
                            <option value="@pool.Id">@pool.SeasonId - @pool.Name</option>
                        }
                    </select>
                </div>
                
                <div class="col text-end small text-muted">
                    Showing @filteredEntries.Count entries
                </div>
            </div>
        </div>
    </div>

    @if (isLoading)
    {
        <div class="d-flex justify-content-center">
            <div class="spinner-border text-primary" role="status"><span class="visually-hidden">Loading...</span></div>
        </div>
    }
    else if (filteredEntries.Count == 0)
    {
        <div class="alert alert-info">No entries found matching the current filters.</div>
    }
    else
    {
        <div class="card shadow-sm">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Player Name</th>
                                <th>Email</th>
                                <th>Season / Pool</th>
                                <th>Tiebreaker</th>
                                <th>Created On (CT)</th>
                                <th class="text-end">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var entry in filteredEntries)
                            {
                                <tr>
                                    <td class="fw-bold">@entry.PlayerName</td>
                                    <td>
                                        @if (userEmailMap.TryGetValue(entry.UserId, out var email))
                                        {
                                            <a href="mailto:@email" class="text-decoration-none">@email</a>
                                        }
                                        else
                                        {
                                            <span class="text-muted small fst-italic">Manual / Unknown</span>
                                        }
                                    </td>
                                    <td>
                                        @{
                                            var poolName = pools.FirstOrDefault(p => p.Id == entry.PoolId)?.Name ?? "Unknown";
                                        }
                                        <div class="d-flex flex-column">
                                            <span class="badge bg-light text-dark border mb-1 align-self-start">@poolName</span>
                                            <small class="text-muted">Season: @entry.SeasonId</small>
                                        </div>
                                    </td>
                                    <td>@entry.TieBreakerPoints</td>
                                    <td>@DateTimeHelper.ToCentral(entry.CreatedOn).ToString("g")</td>
                                    <td class="text-end">
                                        <div class="btn-group btn-group-sm">
                                            <a href="/admin/entry/@entry.Id" class="btn btn-outline-primary">Edit</a>
                                            <button class="btn btn-outline-danger" @onclick="() => DeleteEntry(entry)">Delete</button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>

@code {
    private List<BracketEntry> allEntries = new();
    private List<BracketEntry> filteredEntries = new();
    private List<BowlPool> pools = new();
    private List<Season> seasons = new();
    private Dictionary<string, string> userEmailMap = new();
    private bool isLoading = true;
    
    private string selectedSeasonId = "";
    private string selectedPoolId = "";
    
    // Derived property for Pool dropdown options
    private IEnumerable<BowlPool> FilteredPoolOptions => 
        string.IsNullOrEmpty(selectedSeasonId) 
            ? pools 
            : pools.Where(p => p.SeasonId == selectedSeasonId);

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        try
        {
            isLoading = true;
            
            var seasonsTask = SeasonService.GetSeasonsAsync();
            var poolsTask = Http.GetFromJsonAsync<List<BowlPool>>("api/GetPools");
            // Target standard entry point which gets ALL entries across all pools/seasons
            var entriesTask = Http.GetFromJsonAsync<List<BracketEntry>>("api/GetEntries"); 
            var usersTask = Http.GetFromJsonAsync<List<UserProfile>>("api/GetUsers");

            await Task.WhenAll(seasonsTask, poolsTask, entriesTask, usersTask);

            seasons = await seasonsTask ?? new();
            pools = await poolsTask ?? new();
            allEntries = await entriesTask ?? new();
            var users = await usersTask ?? new();
            
            userEmailMap = users.ToDictionary(u => u.Id, u => u.Email);
            
            allEntries = allEntries.OrderByDescending(e => e.CreatedOn).ToList();
            
            // Set Default Season
            var currentSeason = seasons.FirstOrDefault(s => s.IsCurrent);
            if (currentSeason != null)
            {
                selectedSeasonId = currentSeason.Id;
            }
            
            FilterData();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }
    
    private void OnSeasonFilterChanged(ChangeEventArgs e)
    {
        selectedSeasonId = e.Value?.ToString() ?? "";
        // Reset pool selection when season changes, as the pool might not exist in the new season scope
        selectedPoolId = ""; 
        FilterData();
    }
    
    private void OnPoolFilterChanged(ChangeEventArgs e)
    {
        selectedPoolId = e.Value?.ToString() ?? "";
        FilterData();
    }
    
    private void FilterData()
    {
        var query = allEntries.AsQueryable();
        
        if (!string.IsNullOrEmpty(selectedSeasonId))
        {
            query = query.Where(e => e.SeasonId == selectedSeasonId);
        }
        
        if (!string.IsNullOrEmpty(selectedPoolId))
        {
            query = query.Where(e => e.PoolId == selectedPoolId);
        }
        
        filteredEntries = query.ToList();
    }

    private async Task DeleteEntry(BracketEntry entry)
    {
        bool confirmed = await JS.InvokeAsync<bool>("confirm", $"Are you sure you want to delete the bracket for '{entry.PlayerName}'?");
        if (confirmed)
        {
            var response = await Http.DeleteAsync($"api/DeleteEntry?id={entry.Id}");
            if (response.IsSuccessStatusCode)
            {
                await LoadData();
            }
            else
            {
                await JS.InvokeVoidAsync("alert", "Failed to delete entry.");
            }
        }
    }
}
