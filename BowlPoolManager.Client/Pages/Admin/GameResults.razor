@page "/admin/gameresults"
@using BowlPoolManager.Core.Domain
@using BowlPoolManager.Core
@using Microsoft.AspNetCore.Authorization
@using System.Net.Http.Json
@using System.Text.Json
@attribute [Authorize(Roles = Constants.Roles.SuperAdmin)]

@inject HttpClient Http

@using BowlPoolManager.Client.Services
@inject ISeasonService SeasonService

<PageTitle>Enter Game Results</PageTitle>

<div class="container-fluid mt-3 px-4">
    <div class="d-flex justify-content-between align-items-end mb-3">
        <div class="d-flex flex-column gap-2">
            <div class="d-flex align-items-center gap-3">
                <h1 class="h3 fw-bold mb-0"><i class="bi bi-scoreboard text-primary"></i> Game Results</h1>
            </div>
        </div>
        <span class="badge bg-danger">Super Admin Zone</span>
    </div>

    @if (games == null)
    {
        <div class="alert alert-info">Loading Schedule...</div>
    }
    else if (!games.Any())
    {
        <div class="alert alert-warning">No games found for the current season.</div>
    }
    else
    {
        <div class="card shadow-sm">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th style="width: 15%">Date</th>
                                <th style="width: 30%">Matchup</th>
                                <th style="width: 20%">Status</th>
                                <th style="width: 10%">Home</th>
                                <th style="width: 10%">Away</th>
                                <th style="width: 15%" class="text-end">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var game in games)
                            {
                                <tr class="@GetRowClass(game)">
                                    <td>
                                        <div class="fw-bold">@DateTimeHelper.ToCentral(game.StartTime).ToString("MMM d")</div>
                                        <div class="small text-muted">@DateTimeHelper.ToCentral(game.StartTime).ToString("h:mm tt") CT</div>
                                    </td>
                                    <td>
                                        <div class="fw-bold">@game.BowlName</div>
                                        <div class="small">
                                            <span class="text-primary">@GetDisplayTeamName(game, true)</span> vs <span class="text-danger">@GetDisplayTeamName(game, false)</span>
                                        </div>
                                    </td>
                                    <td>
                                        <InputSelect class="form-select form-select-sm" @bind-Value="game.Status">
                                            <option value="@GameStatus.Scheduled">Scheduled</option>
                                            <option value="@GameStatus.InProgress">In Progress</option>
                                            <option value="@GameStatus.Final">Final</option>
                                        </InputSelect>
                                    </td>
                                    <td>
                                        <InputNumber class="form-control form-control-sm" @bind-Value="game.TeamHomeScore" placeholder="-" />
                                    </td>
                                    <td>
                                        <InputNumber class="form-control form-control-sm" @bind-Value="game.TeamAwayScore" placeholder="-" />
                                    </td>
                                    <td class="text-end">
                                        <button class="btn btn-sm btn-success" @onclick="() => SaveResult(game)">
                                            <i class="bi bi-check-lg"></i> Save
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    
    @if (!string.IsNullOrEmpty(statusMessage))
    {
        <div class="position-fixed bottom-0 end-0 p-3" style="z-index: 11">
            <div class="toast show align-items-center text-white bg-success border-0" role="alert" aria-live="assertive" aria-atomic="true">
                <div class="d-flex">
                    <div class="toast-body">
                        @statusMessage
                    </div>
                    <button type="button" class="btn-close btn-close-white me-2 m-auto" @onclick="() => statusMessage = null"></button>
                </div>
            </div>
        </div>
    }
</div>

@code {
    private List<BowlGame>? games;
    private string? statusMessage;
    private string currentSeasonId = "";

    protected override async Task OnInitializedAsync()
    {
        await LoadSeasonAndGames();
    }

    private async Task LoadSeasonAndGames()
    {
        try
        {
            var seasons = await SeasonService.GetSeasonsAsync();
            var current = seasons.FirstOrDefault(s => s.IsCurrent);
            if (current != null)
            {
                currentSeasonId = current.Id;
                await LoadGames();
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading season: {ex.Message}");
        }
    }

    private async Task LoadGames()
    {
        try
        {
            var url = "api/GetGames";
            if (!string.IsNullOrEmpty(currentSeasonId))
            {
                url += $"?seasonId={currentSeasonId}";
            }
            
            var allGames = await Http.GetFromJsonAsync<List<BowlGame>>(url);
            if (allGames != null)
            {
                games = allGames.OrderBy(g => g.StartTime).ToList();
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading games: {ex.Message}");
        }
    }

    private string GetRowClass(BowlGame game)
    {
        if (game.Status == GameStatus.InProgress) return "table-warning border-start border-warning border-5";
        if (game.Status == GameStatus.Final) return "table-secondary text-muted";
        return "";
    }

    private async Task SaveResult(BowlGame game)
    {
        try 
        {
            var response = await Http.PostAsJsonAsync("api/SaveGame", game);
            if (response.IsSuccessStatusCode)
            {
                statusMessage = $"Updated {game.BowlName}!";
                await Task.Delay(3000);
                statusMessage = null;
                StateHasChanged();
            }
            else
            {
                Console.WriteLine($"Save failed: {response.StatusCode}");
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error saving result: {ex.Message}");
        }
    }

    private string GetDisplayTeamName(BowlGame game, bool isHome)
    {
        string currentName = isHome ? game.TeamHome : game.TeamAway;
        
        // If we have a valid name, and it's not "TBD" or "Winner Of", return it
        if (!IsTBD(currentName))
        {
            return currentName;
        }

        if (games == null) return "TBD";

        // Logic matched from ScoreboardCard
        var feeders = games
            .Where(g => g.NextGameId == game.Id)
            .OrderBy(g => g.StartTime)
            .ToList();

        if (feeders.Count == 0) return "TBD";

        BowlGame? targetFeeder = null;

        if (feeders.Count == 1) 
        {
            targetFeeder = feeders[0];
        }
        else
        {
            // 2 Feeders: Disambiguate
            // Attempt to find the "other" team to deduce ours
            string otherSlotName = isHome ? game.TeamAway : game.TeamHome;
            BowlGame? claimedFeeder = null;

            if (!IsTBD(otherSlotName))
            {
                // If the other slot is filled, which feeder did it come from?
                // Logic: A feeder is 'claimed' if its winner matches the other slot's name
                claimedFeeder = feeders.FirstOrDefault(f => f.Status == GameStatus.Final && f.WinningTeamName == otherSlotName);
            }

            if (claimedFeeder != null)
            {
                // If the other slot claimed one, we are the other one
                targetFeeder = feeders.FirstOrDefault(f => f.Id != claimedFeeder.Id);
            }
            else
            {
                // Deterministic assignment
                targetFeeder = isHome ? feeders[0] : feeders[1];
            }
        }

        if (targetFeeder != null)
        {
            if (targetFeeder.Status == GameStatus.Final && !string.IsNullOrEmpty(targetFeeder.WinningTeamName))
            {
                return targetFeeder.WinningTeamName;
            }
            return $"Winner of {targetFeeder.BowlName}";
        }

        return "TBD";
    }

    private bool IsTBD(string name)
    {
        if (string.IsNullOrEmpty(name)) return true;
        if (name.Equals("TBD", StringComparison.OrdinalIgnoreCase)) return true;
        if (name.StartsWith("Winner of", StringComparison.OrdinalIgnoreCase)) return true;
        return false;
    }
}
