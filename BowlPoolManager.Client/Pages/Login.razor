@page "/login"

<PageTitle>Log In</PageTitle>

<div class="container mt-5" style="max-width: 500px;">
    <div class="card shadow-sm">
        <div class="card-body text-center p-5">
            <h1 class="fw-bold text-primary mb-4">Welcome</h1>
            <p class="text-muted mb-4">Please sign in to continue.</p>

            <div class="d-grid gap-3">
                <a href="/.auth/login/aad?post_login_redirect_uri=/" class="btn btn-dark btn-lg">
                    <i class="bi bi-microsoft me-2"></i> Sign in with Microsoft
                </a>
                <a href="/.auth/login/google?post_login_redirect_uri=/" class="btn btn-outline-danger btn-lg">
                    <i class="bi bi-google me-2"></i> Sign in with Google
                </a>
            </div>
        </div>
    </div>
</div>
