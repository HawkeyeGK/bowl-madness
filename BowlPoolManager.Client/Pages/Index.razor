@page "/"
@using BowlPoolManager.Core.Domain
@using BowlPoolManager.Core
@using BowlPoolManager.Client.Helpers
@inject HttpClient Http

<PageTitle>Dashboard</PageTitle>

<div class="container mt-5">
    <div class="text-center mb-5">
        <h1 class="display-3 fw-bold text-primary">Bowl Madness</h1>
        <p class="lead text-muted">Select a pool to get started or view history.</p>
    </div>

    @if (isLoading)
    {
         <div class="d-flex justify-content-center">
            <div class="spinner-border text-primary" role="status"><span class="visually-hidden">Loading...</span></div>
        </div>
    }
    else
    {
        @* ACTIVE POOLS *@
        <div class="mb-5">
            <h3 class="border-bottom pb-2 mb-4"><i class="bi bi-play-circle-fill text-success me-2"></i>Active Seasons</h3>
            
            @if (ActivePools.Any())
            {
                <div class="row g-4">
                    @foreach (var pool in ActivePools)
                    {
                        <div class="col-md-6 col-lg-4">
                            <div class="card h-100 shadow-sm border-0 bg-white">
                                <div class="card-body">
                                    <h4 class="card-title fw-bold text-primary mb-1">@pool.Name</h4>
                                    <div class="text-muted small mb-3">Season @pool.Season</div>
                                    
                                    @if (DateTime.UtcNow > pool.LockDate)
                                    {
                                         <div class="badge bg-warning text-dark mb-3"><i class="bi bi-lock-fill"></i> Picks Locked</div>
                                    }
                                    else
                                    {
                                         <div class="badge bg-success mb-3"><i class="bi bi-unlock-fill"></i> Open for Picks</div>
                                    }

                                    <div class="d-grid gap-2">
                                        <a href="leaderboard?poolId=@pool.Id" class="btn btn-primary">
                                            <i class="bi bi-trophy-fill me-2"></i> Leaderboard
                                        </a>
                                        <a href="mypicks" class="btn btn-outline-primary">
                                            <i class="bi bi-pencil-square me-2"></i> My Picks
                                        </a>
                                    </div>
                                </div>
                                <div class="card-footer bg-light border-0 small text-muted text-center">
                                    Deadline: @DateTimeHelper.ToCentral(pool.LockDate).ToString("MMM d, h:mm tt") CT
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    No active pools at the moment. Check back later!
                </div>
            }
        </div>

        @* ARCHIVED POOLS *@
        @if (ArchivedPools.Any())
        {
            <div class="mb-5">
                <h3 class="border-bottom pb-2 mb-4 text-muted"><i class="bi bi-clock-history me-2"></i>Pool History</h3>
                 <div class="list-group shadow-sm">
                    @foreach (var pool in ArchivedPools.OrderByDescending(p => p.Season))
                    {
                        <a href="history/@pool.Id" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center p-3">
                            <div>
                                <h5 class="mb-1 text-secondary">@pool.Name</h5>
                                <div class="small text-muted">Season @pool.Season</div>
                            </div>
                            <span class="btn btn-outline-secondary btn-sm">
                                View History <i class="bi bi-chevron-right ms-1"></i>
                            </span>
                        </a>
                    }
                </div>
            </div>
        }
    }
</div>

@code {
    private bool isLoading = true;
    private List<BowlPool> ActivePools = new();
    private List<BowlPool> ArchivedPools = new();

    protected override async Task OnInitializedAsync()
    {
        try
        {
            isLoading = true;
            var pools = await Http.GetFromJsonAsync<List<BowlPool>>("api/GetPools") ?? new();
            
            ActivePools = pools.Where(p => !p.IsArchived).OrderByDescending(p => p.Season).ToList();
            ArchivedPools = pools.Where(p => p.IsArchived).ToList();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading pools: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }
}
