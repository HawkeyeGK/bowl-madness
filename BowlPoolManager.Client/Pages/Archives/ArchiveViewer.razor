@page "/history/{poolId}"
@using BowlPoolManager.Core.Domain
@using BowlPoolManager.Client.Services

@inject IPoolService PoolService

<PageTitle>Archive Viewer</PageTitle>

<div class="container-fluid mt-3 px-4">
    @if (isLoading)
    {
         <div class="d-flex justify-content-center">
            <div class="spinner-border text-primary" role="status"><span class="visually-hidden">Loading...</span></div>
        </div>
    }
    else if (archive == null)
    {
        <div class="alert alert-warning">
            <h4 class="alert-heading">Archive Not Found</h4>
            <p>Could not find an archived record for this pool. It may not be archived yet.</p>
            <hr>
            <p class="mb-0"><a href="/" class="alert-link">Return Home</a></p>
        </div>
    }
    else
    {
        @* HEADER *@
        <div class="d-flex justify-content-between align-items-end mb-3">
             @* LEFT SIDE *@
            <div class="d-flex align-items-center gap-3">
                <h1 class="h3 fw-bold mb-0">
                    <i class="bi bi-archive-fill text-muted"></i> @archive.PoolName
                </h1>
                <span class="badge bg-secondary">Season @archive.Season</span>
            </div>

            @* RIGHT SIDE *@
            <div class="text-end">
                <div class="text-muted small">
                     <i class="bi bi-clock"></i> Archived: @archive.ArchivedOn.ToLocalTime().ToString("g")
                </div>
            </div>
        </div>

        <div class="row g-4">
            @* --- LEADERBOARD (LEFT) --- *@
            <div class="col-lg-8">
                <div class="card shadow-sm h-100">
                    <div class="card-header bg-white py-3">
                        <h5 class="mb-0"><i class="bi bi-trophy text-warning me-2"></i>Final Standings</h5>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-striped table-hover align-middle mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th class="text-center" style="width: 80px;">Rank</th>
                                    <th>Player</th>
                                    <th class="text-center">Total Points</th>
                                    <th class="text-end text-muted small">Tiebreaker</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var entry in archive.Standings.OrderBy(s => s.Rank))
                                {
                                    <tr class="@(entry.Rank == 1 ? "table-warning fw-bold" : "") @(selectedStanding == entry ? "table-active border border-primary border-2" : "")" 
                                        @onclick="() => SelectEntry(entry)" 
                                        style="cursor: pointer;">
                                        <td class="text-center h5 text-secondary">@entry.Rank</td>
                                        <td>
                                            @entry.PlayerName
                                            @if (entry.Rank == 1)
                                            {
                                                <i class="bi bi-trophy-fill ms-2" style="color: #FFD700;" title="1st Place - Gold"></i>
                                            }
                                            else if (entry.Rank == 2)
                                            {
                                                <i class="bi bi-trophy-fill ms-2" style="color: #C0C0C0;" title="2nd Place - Silver"></i>
                                            }
                                            else if (entry.Rank == 3)
                                            {
                                                <i class="bi bi-trophy-fill ms-2" style="color: #CD7F32;" title="3rd Place - Bronze"></i>
                                            }
                                        </td>
                                        <td class="text-center h5">@entry.TotalPoints</td>
                                        <td class="text-end text-muted">@entry.TieBreakerPoints</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            @* --- GAMES SUMMARY (RIGHT) --- *@
            <div class="col-lg-4">
                <div class="card shadow-sm h-100">
                    <div class="card-header bg-white py-3">
                        <h5 class="mb-0">
                            <i class="bi bi-calendar-check text-success me-2"></i>
                            @(selectedStanding == null ? "Game Results" : $"{selectedStanding.PlayerName}'s Picks")
                        </h5>
                    </div>
                    <div class="list-group list-group-flush" style="max-height: 800px; overflow-y: auto;">
                        @foreach (var game in archive.Games.OrderByDescending(g => g.StartTime).ThenBy(g => g.BowlName)) 
                        {
                            <div class="list-group-item">
                                <div class="d-flex justify-content-between align-items-start mb-2">
                                    <span class="fw-bold small text-primary">@game.BowlName</span>
                                    <span class="badge bg-light text-dark border">@game.PointValue pts</span>
                                </div>
                                
                                <div class="d-flex justify-content-between align-items-center">
                                    @* HOME *@
                                    <div class="@(GetWinner(game) == game.TeamHome ? "fw-bold text-success" : "")">
                                        @game.TeamHome <span class="ms-1">@game.TeamHomeScore</span>
                                    </div>
                                    <div class="small text-muted mx-2">vs</div>
                                    @* AWAY *@
                                    <div class="@(GetWinner(game) == game.TeamAway ? "fw-bold text-success" : "text-end")">
                                        @game.TeamAway <span class="ms-1">@game.TeamAwayScore</span>
                                    </div>
                                </div>

                                @* PICK VISUALIZATION *@
                                @if (selectedStanding != null)
                                {
                                    var pick = GetPick(game);
                                    var winner = GetWinner(game);
                                    var isFinished = !string.IsNullOrEmpty(winner);
                                    var correct = isFinished && pick == winner;
                                    
                                    <div class="mt-2 pt-2 border-top d-flex justify-content-between align-items-center bg-light px-2 rounded">
                                        <small class="text-muted text-uppercase" style="font-size: 0.7rem;">Pick:</small>
                                        <div class="fw-bold @(isFinished ? (correct ? "text-success" : "text-danger") : "text-dark")">
                                            @pick
                                            @if (isFinished)
                                            {
                                                <i class="bi @(correct ? "bi-check-lg" : "bi-x-lg") ms-1"></i>
                                            }
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
        
        <div class="mt-4 text-center">
            <a href="/" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left me-2"></i> Back to Dashboard
            </a>
        </div>
    }
</div>

@code {
    [Parameter]
    public string PoolId { get; set; } = string.Empty;

    private PoolArchive? archive;
    private bool isLoading = true;
    private ArchiveStanding? selectedStanding; // NEW: Track selected entry

    protected override async Task OnInitializedAsync()
    {
        if (!string.IsNullOrEmpty(PoolId))
        {
            archive = await PoolService.GetArchiveAsync(PoolId);
        }
        isLoading = false;
    }

    private void SelectEntry(ArchiveStanding entry)
    {
        if (selectedStanding == entry)
            selectedStanding = null; // Toggle off
        else
            selectedStanding = entry;
    }

    private string GetWinner(ArchiveGame game)
    {
        if (!game.TeamHomeScore.HasValue || !game.TeamAwayScore.HasValue) return "";
        if (game.TeamHomeScore > game.TeamAwayScore) return game.TeamHome;
        if (game.TeamAwayScore > game.TeamHomeScore) return game.TeamAway;
        return "Tie";
    }

    private string GetPick(ArchiveGame game)
    {
        if (selectedStanding == null) return "";
        if (selectedStanding.Picks.TryGetValue(game.GameId, out var pick))
        {
            return pick;
        }
        return "No Pick";
    }

    private bool IsCorrect(ArchiveGame game, string pick)
    {
        var winner = GetWinner(game);
        return !string.IsNullOrEmpty(winner) && winner != "Tie" && pick == winner;
    }
}
