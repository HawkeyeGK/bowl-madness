@page "/history/{poolId}"
@using BowlPoolManager.Core.Domain
@using BowlPoolManager.Client.Services
@using BowlPoolManager.Client.Helpers
@inject IPoolService PoolService

<PageTitle>Archive Viewer</PageTitle>

<div class="container mt-4">
    @if (isLoading)
    {
         <div class="d-flex justify-content-center">
            <div class="spinner-border text-primary" role="status"><span class="visually-hidden">Loading...</span></div>
        </div>
    }
    else if (archive == null)
    {
        <div class="alert alert-warning">
            <h4 class="alert-heading">Archive Not Found</h4>
            <p>Could not find an archived record for this pool. It may not be archived yet.</p>
            <hr>
            <p class="mb-0"><a href="/" class="alert-link">Return Home</a></p>
        </div>
    }
    else
    {
        @* HEADER *@
        <div class="card shadow-sm mb-4 border-0 bg-light">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-uppercase text-muted fw-bold mb-1">Season @archive.SeasonId Archive</h6>
                        <h2 class="display-6 fw-bold text-primary mb-0">@archive.PoolName</h2>
                    </div>
                    <div class="text-end">
                        <div class="badge bg-secondary mb-1">ARCHIVED COPY</div>
                        <div class="small text-muted">Snapshot: @archive.ArchivedOn.ToLocalTime().ToString("g")</div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row g-4">
            @* --- LEADERBOARD (LEFT) --- *@
            <div class="col-lg-8">
                <div class="card shadow-sm h-100">
                    <div class="card-header bg-white py-3">
                        <h5 class="mb-0"><i class="bi bi-trophy text-warning me-2"></i>Final Standings</h5>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-striped table-hover align-middle mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th class="text-center" style="width: 80px;">Rank</th>
                                    <th>Player</th>
                                    <th class="text-center">Total Points</th>
                                    <th class="text-end text-muted small">Tiebreaker</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var entry in archive.Standings.OrderBy(s => s.Rank))
                                {
                                    <tr class="@(entry.Rank == 1 ? "table-warning fw-bold" : "")">
                                        <td class="text-center h5 text-secondary">@entry.Rank</td>
                                        <td>
                                            @entry.PlayerName
                                            @if(entry.Rank == 1) { <i class="bi bi-crown-fill text-warning ms-2"></i> }
                                        </td>
                                        <td class="text-center h5">@entry.TotalPoints</td>
                                        <td class="text-end text-muted">@entry.TieBreakerPoints</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            @* --- GAMES SUMMARY (RIGHT) --- *@
            <div class="col-lg-4">
                <div class="card shadow-sm h-100">
                    <div class="card-header bg-white py-3">
                        <h5 class="mb-0"><i class="bi bi-calendar-check text-success me-2"></i>Game Results</h5>
                    </div>
                    <div class="list-group list-group-flush" style="max-height: 800px; overflow-y: auto;">
                        @foreach (var game in archive.Games.OrderBy(g => g.BowlName)) // Or date? Archive doesn't store date. Using Bowl Name.
                        {
                            <div class="list-group-item">
                                <div class="d-flex justify-content-between align-items-start mb-2">
                                    <span class="fw-bold small text-primary">@game.BowlName</span>
                                    <span class="badge bg-light text-dark border">@game.PointValue pts</span>
                                </div>
                                
                                <div class="d-flex justify-content-between align-items-center">
                                    @* HOME *@
                                    <div class="@(GetWinner(game) == game.TeamHome ? "fw-bold text-success" : "")">
                                        @game.TeamHome <span class="ms-1">@game.TeamHomeScore</span>
                                    </div>
                                    <div class="small text-muted mx-2">vs</div>
                                    @* AWAY *@
                                    <div class="@(GetWinner(game) == game.TeamAway ? "fw-bold text-success" : "text-end")">
                                        <span class="me-1">@game.TeamAwayScore</span> @game.TeamAway
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
        
        <div class="mt-4 text-center">
            <a href="/" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left me-2"></i> Back to Dashboard
            </a>
        </div>
    }
</div>

@code {
    [Parameter]
    public string PoolId { get; set; } = string.Empty;

    private PoolArchive? archive;
    private bool isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        if (!string.IsNullOrEmpty(PoolId))
        {
            archive = await PoolService.GetArchiveAsync(PoolId);
        }
        isLoading = false;
    }

    private string GetWinner(ArchiveGame game)
    {
        if (!game.TeamHomeScore.HasValue || !game.TeamAwayScore.HasValue) return "";
        if (game.TeamHomeScore > game.TeamAwayScore) return game.TeamHome;
        if (game.TeamAwayScore > game.TeamHomeScore) return game.TeamAway;
        return "Tie";
    }
}
