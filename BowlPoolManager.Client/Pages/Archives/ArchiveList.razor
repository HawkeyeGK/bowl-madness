@page "/archives"
@using BowlPoolManager.Core.Domain
@using BowlPoolManager.Client.Services

@inject IPoolService PoolService

<PageTitle>Pool Archives</PageTitle>

<div class="container-fluid mt-3 px-4">
    <div class="d-flex justify-content-between align-items-end mb-3">
        @* LEFT SIDE *@
        <div class="d-flex align-items-center gap-3">
            <h1 class="h3 fw-bold mb-0"><i class="bi bi-clock-history text-primary"></i> Pool History</h1>
        </div>
    </div>

    @if (isLoading)
    {
         <div class="d-flex justify-content-center">
            <div class="spinner-border text-primary" role="status"><span class="visually-hidden">Loading...</span></div>
        </div>
    }
    else if (!archivedPools.Any())
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle me-2"></i> No archived pools available yet.
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var pool in archivedPools.OrderByDescending(p => p.Season).ThenBy(p => p.Name))
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card shadow-sm h-100 border-0 bg-light">
                        <div class="card-body">
                            <h5 class="card-title text-primary mb-1">@pool.Name</h5>
                            <h6 class="card-subtitle text-muted mb-3">Season @pool.Season</h6>
                            
                            <p class="card-text small">
                                Concluded and archived. View the final standings and game results.
                            </p>
                            
                            <a href="history/@pool.Id" class="btn btn-outline-primary stretched-link">
                                <i class="bi bi-eye me-1"></i> View Archive
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@code {
    private List<BowlPool> archivedPools = new();
    private bool isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            var allPools = await PoolService.GetPoolsAsync();
            archivedPools = allPools.Where(p => p.IsArchived).ToList();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading pools: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }
}
