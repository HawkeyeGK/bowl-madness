@page "/entry/{EntryId}"
@using BowlPoolManager.Core.Domain
@using BowlPoolManager.Core
@using BowlPoolManager.Core.Helpers
@inject HttpClient Http

<div class="container-fluid mt-3 px-4 pb-5">
    <div class="mb-4">
        <a href="/" class="btn btn-outline-secondary btn-sm">
            <i class="bi bi-arrow-left"></i> Back to Leaderboard
        </a>
    </div>

    @if (isLoading)
    {
        <div class="d-flex justify-content-center">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    }
    else if (entry == null)
    {
        <div class="alert alert-warning">Entry not found.</div>
    }
    else if (entry.Picks == null || (currentPool != null && DateTime.UtcNow < currentPool.LockDate)) 
    {
        <div class="alert alert-info text-center py-5">
            <i class="bi bi-shield-lock display-1"></i>
            <h2 class="mt-3">Picks Hidden</h2>
            <p>This bracket is hidden until the pool unlocks.</p>
            <AuthorizeView Roles="@Constants.Roles.SuperAdmin">
                <Authorized>
                    <div class="mt-3">
                        <a href="/admin/entry/@entry.Id" class="btn btn-warning shadow-sm">
                            <i class="bi bi-pencil-square"></i> Edit Picks (Admin Bypass)
                        </a>
                    </div>
                </Authorized>
            </AuthorizeView>
        </div>
    }
    else
    {
        <div class="card shadow-sm mb-4">
            <div class="card-body bg-light">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h2 class="fw-bold mb-0">@entry.PlayerName</h2>
                    
                    <div class="d-flex gap-2">
                         <AuthorizeView Roles="@Constants.Roles.SuperAdmin">
                            <Authorized>
                                <a href="/admin/entry/@entry.Id" class="btn btn-warning btn-sm shadow-sm">
                                    <i class="bi bi-pencil-square"></i> Edit Picks
                                </a>
                            </Authorized>
                        </AuthorizeView>
                    </div>
                </div>

                <div class="row text-center border-top pt-3">
                    <div class="col-md-4">
                         <span class="text-muted small d-block">Tiebreaker</span>
                        <h4 class="fw-bold text-dark">@entry.TieBreakerPoints</h4>
                    </div>
                    <div class="col-md-4 border-start border-end">
                         <span class="text-muted small d-block">Current Points</span>
                        <h2 class="text-primary fw-bold mb-0">@currentScore</h2>
                    </div>
                    <div class="col-md-4">
                        <span class="text-muted small d-block">Max Potential</span>
                        <h2 class="text-info fw-bold mb-0">@maxPossible</h2>
                    </div>
                </div>
            </div>
        </div>

        <div class="row row-cols-1 row-cols-md-2 row-cols-xl-3 g-4">
            @foreach (var game in games.OrderBy(g => g.IsPlayoff).ThenBy(g => g.StartTime))
            {
                string? pick = null;
                bool hasPick = entry.Picks != null && entry.Picks.TryGetValue(game.Id, out pick);
                
                // Resolve display names
                var (homeTeamName, awayTeamName) = GetDisplayTeams(game, entry);
                
                // Determine Visual State for the Card/Pick
                bool isCorrect = false;
                bool isIncorrect = false;
                bool isEliminated = false;

                if (game.IsFinal && hasPick)
                {
                    isCorrect = string.Equals(pick, game.WinningTeamName, StringComparison.OrdinalIgnoreCase);
                    isIncorrect = !isCorrect;
                }
                else if (!game.IsFinal && hasPick && !string.IsNullOrEmpty(pick) && eliminatedTeams.Contains(pick))
                {
                    isEliminated = true;
                }

                string cardBgClass = isCorrect ? "bg-success-subtle" : ((isIncorrect || isEliminated) ? "bg-danger-subtle" : "bg-white");
                // Remove border if we have background, or keep it subtle?
                string cardBorderClass = isCorrect ? "border-success" : ((isIncorrect || isEliminated) ? "border-danger" : "");

                <div class="col">
                    <div class="card h-100 shadow-sm scoreboard-card @cardBgClass @cardBorderClass">
                        
                        @* CARD HEADER *@
                        <div class="card-header border-bottom-0 pt-3 pb-2 d-flex justify-content-between align-items-center bg-transparent">
                            <div class="text-truncate pe-2">
                                <span class="small text-uppercase fw-bold text-muted" title="@game.BowlName">@game.BowlName</span>
                                @if (game.IsPlayoff)
                                {
                                    <span class="badge bg-warning text-dark ms-2">Playoff</span>
                                }
                            </div>
                            
                            @if (game.Status == GameStatus.InProgress)
                            {
                                <span class="badge bg-danger animate-pulse">LIVE</span>
                            }
                            else if (game.Status == GameStatus.Final)
                            {
                                <span class="badge bg-secondary">FINAL</span>
                            }
                            else
                            {
                                <div class="text-end small text-muted">
                                    @DateTimeHelper.ToCentral(game.StartTime).ToString("MMM d, h:mm tt")
                                </div>
                            }
                        </div>

                        <div class="card-body pt-0 pb-3">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <small class="text-muted text-truncate">@game.Location</small>
                                @if (!string.IsNullOrEmpty(game.Television))
                                {
                                    <span class="badge bg-light text-dark border">@game.Television</span>
                                }
                            </div>

                            @* AWAY TEAM *@
                            @{
                                bool pickedAway = hasPick && pick == awayTeamName;
                                // Use refined lookup to find logo even if game is TBD
                                var awayInfo = ResolveTeamInfo(awayTeamName);
                                bool isAwayWinner = game.IsFinal && game.WinningTeamName == awayTeamName;
                            }
                            <div class="d-flex align-items-center mb-2 team-row p-2 position-relative @(isAwayWinner ? "fw-bold" : "") @(pickedAway ? "bg-light" : "bg-white")"
                                 style="border-left: 5px solid @(GetColor(awayInfo, awayTeamName)); border-radius: 4px;">
                                
                                @if (IsTBD(awayTeamName) || string.IsNullOrEmpty(awayInfo?.PrimaryLogoUrl))
                                {
                                    <i class="bi bi-shield-shaded me-3 text-secondary" style="font-size: 32px; width: 32px; text-align: center;"></i>
                                }
                                else
                                {
                                    <img src="@awayInfo.PrimaryLogoUrl" alt="@awayTeamName" class="me-3 team-logo" 
                                         width="32" height="32" style="object-fit: contain;"
                                         onerror="this.style.display='none'; this.nextElementSibling.style.display='block';" />
                                    <i class="bi bi-shield-shaded me-3 text-secondary" style="font-size: 32px; width: 32px; text-align: center; display: none;"></i>
                                }

                                <div class="flex-grow-1 text-truncate">
                                    <div class="d-flex align-items-center @(pickedAway ? "fw-bold text-dark" : "")">
                                        <span class="me-2 text-truncate">@awayTeamName</span>
                                        @if(game.TeamAwaySeed.HasValue && !IsTBD(awayTeamName))
                                        {
                                            <span class="small text-muted fw-normal me-2">(@game.TeamAwaySeed)</span>
                                        }
                                        
                                        @if (pickedAway)
                                        {
                                             @if (isCorrect) { <i class="bi bi-check-circle-fill text-success fs-5"></i> }
                                             else if (isIncorrect) { <i class="bi bi-x-circle-fill text-danger fs-5"></i> }
                                             else if (isEliminated) { <i class="bi bi-x-circle-fill text-danger fs-5"></i> }
                                             else { <i class="bi bi-check-circle-fill text-primary fs-5"></i> }
                                        }
                                    </div>
                                    @if (pickedAway && isEliminated)
                                    {
                                        <div class="small text-danger fst-italic lh-1">Eliminated</div>
                                    }
                                </div>
                                <div class="fs-5 @(isAwayWinner ? "fw-bold" : "")">@(game.TeamAwayScore?.ToString() ?? "")</div>
                            </div>

                            @* HOME TEAM *@
                            @{
                                bool pickedHome = hasPick && pick == homeTeamName;
                                var homeInfo = ResolveTeamInfo(homeTeamName);
                                bool isHomeWinner = game.IsFinal && game.WinningTeamName == homeTeamName;
                            }
                            <div class="d-flex align-items-center team-row p-2 position-relative @(isHomeWinner ? "fw-bold" : "") @(pickedHome ? "bg-light" : "bg-white")"
                                 style="border-left: 5px solid @(GetColor(homeInfo, homeTeamName)); border-radius: 4px;">
                                
                                @if (IsTBD(homeTeamName) || string.IsNullOrEmpty(homeInfo?.PrimaryLogoUrl))
                                {
                                    <i class="bi bi-shield-shaded me-3 text-secondary" style="font-size: 32px; width: 32px; text-align: center;"></i>
                                }
                                else
                                {
                                    <img src="@homeInfo.PrimaryLogoUrl" alt="@homeTeamName" class="me-3 team-logo" 
                                         width="32" height="32" style="object-fit: contain;"
                                         onerror="this.style.display='none'; this.nextElementSibling.style.display='block';" />
                                    <i class="bi bi-shield-shaded me-3 text-secondary" style="font-size: 32px; width: 32px; text-align: center; display: none;"></i>
                                }

                                <div class="flex-grow-1 text-truncate">
                                    <div class="d-flex align-items-center @(pickedHome ? "fw-bold text-dark" : "")">
                                        <span class="me-2 text-truncate">@homeTeamName</span>
                                        @if(game.TeamHomeSeed.HasValue && !IsTBD(homeTeamName))
                                        {
                                            <span class="small text-muted fw-normal me-2">(@game.TeamHomeSeed)</span>
                                        }
                                        
                                        @if (pickedHome)
                                        {
                                             @if (isCorrect) { <i class="bi bi-check-circle-fill text-success fs-5"></i> }
                                             else if (isIncorrect) { <i class="bi bi-x-circle-fill text-danger fs-5"></i> }
                                             else if (isEliminated) { <i class="bi bi-x-circle-fill text-danger fs-5"></i> }
                                             else { <i class="bi bi-check-circle-fill text-primary fs-5"></i> }
                                        }
                                    </div>
                                    @if (pickedHome && isEliminated)
                                    {
                                        <div class="small text-danger fst-italic lh-1">Eliminated</div>
                                    }
                                </div>
                                <div class="fs-5 @(isHomeWinner ? "fw-bold" : "")">@(game.TeamHomeScore?.ToString() ?? "")</div>
                            </div>
                            
                            @if (!hasPick)
                            {
                                <div class="mt-2 text-center">
                                    <span class="badge bg-secondary opacity-50 fst-italic">No Pick Made</span>
                                </div>
                            }
                            
                            <div class="mt-2 text-end border-top pt-2">
                                <small class="text-muted">
                                    Pool Points: <strong>@game.PointValue</strong>
                                </small>
                            </div>

                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<style>
    .animate-pulse {
        animation: pulse 2s infinite;
    }
    @@keyframes pulse {
        0% { opacity: 1; }
        50% { opacity: 0.5; }
        100% { opacity: 1; }
    }
    .team-row {
        transition: background-color 0.2s;
    }
    /* Custom subtle backgrounds if BS5 isn't fully available or we want detailed control */
    .bg-success-subtle { background-color: #d1e7dd !important; }
    .bg-danger-subtle { background-color: #f8d7da !important; }
</style>

@code {
    [Parameter] public string EntryId { get; set; } = string.Empty;
    private bool isLoading = true;
    private BracketEntry? entry;
    private List<BowlGame> games = new();
    private int currentScore = 0;
    private int maxPossible = 0;

    private HashSet<string> eliminatedTeams = new(StringComparer.OrdinalIgnoreCase);
    private BowlPool? currentPool;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            var gamesTask = Http.GetFromJsonAsync<List<BowlGame>>("api/GetGames");
            var entriesTask = Http.GetFromJsonAsync<List<BracketEntry>>("api/GetEntries");
            var poolsTask = Http.GetFromJsonAsync<List<BowlPool>>("api/GetPools");
            await Task.WhenAll(gamesTask, entriesTask, poolsTask);

            // 1. Get All Data
            var allGames = await gamesTask ?? new();
            var allEntries = await entriesTask ?? new();
            var allPools = await poolsTask ?? new();

            // 2. Find Entry
            entry = allEntries.FirstOrDefault(e => e.Id == EntryId);
            
            if (entry != null)
            {
                // 3. Find Pool and Filter Games
                currentPool = allPools.FirstOrDefault(p => p.Id == entry.PoolId);
                
                if (currentPool != null && currentPool.GameIds != null && currentPool.GameIds.Any())
                {
                    games = allGames.Where(g => currentPool.GameIds.Contains(g.Id)).ToList();
                }
                else
                {
                    // Fallback
                    games = allGames.ToList();
                }

                // Logic Consolidation: Use Domain Model properties
                foreach (var g in games.Where(x => x.IsFinal))
                {
                    if (!string.IsNullOrEmpty(g.LosingTeamName))
                    {
                        eliminatedTeams.Add(g.LosingTeamName);
                    }
                }

                if (entry.Picks != null)
                {
                    var stats = ScoringEngine.Calculate(games, new List<BracketEntry> { entry }).First();
                    currentScore = stats.Score;
                    maxPossible = stats.MaxPossible;
                }
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading entry: {ex.Message}");
        }
        finally { isLoading = false; }
    }

    private (string Home, string Away) GetDisplayTeams(BowlGame game, BracketEntry? entry)
    {
        string home = game.TeamHome;
        string away = game.TeamAway;

        if ((string.IsNullOrEmpty(home) || string.IsNullOrEmpty(away)) && entry != null && entry.Picks != null)
        {
            var feeders = games.Where(g => g.NextGameId == game.Id).OrderBy(g => g.StartTime).ToList();
            var predictedWinners = new Queue<string>();
            foreach (var feeder in feeders)
            {
                if (entry.Picks.TryGetValue(feeder.Id, out var winner) && !string.IsNullOrEmpty(winner))
                {
                    predictedWinners.Enqueue(winner);
                }
                else
                {
                    predictedWinners.Enqueue($"Winner of {feeder.BowlName}");
                }
            }
            if (string.IsNullOrEmpty(home) && predictedWinners.Count > 0) home = predictedWinners.Dequeue();
            if (string.IsNullOrEmpty(away) && predictedWinners.Count > 0) away = predictedWinners.Dequeue();
        }

        if (string.IsNullOrEmpty(home)) home = "TBD";
        if (string.IsNullOrEmpty(away)) away = "TBD";
        return (home, away);
    }
    
    // --- Visual Helpers ---
    private TeamInfo? ResolveTeamInfo(string teamName)
    {
        if (IsTBD(teamName)) return null;
        
        // Scan current games list to find which team definition matches this name
        foreach(var g in games)
        {
            if (string.Equals(g.TeamHome, teamName, StringComparison.OrdinalIgnoreCase)) return g.HomeTeamInfo;
            if (string.Equals(g.TeamAway, teamName, StringComparison.OrdinalIgnoreCase)) return g.AwayTeamInfo;
        }
        return null;
    }

    private string GetColor(TeamInfo? info, string resolvedName)
    {
        if (IsTBD(resolvedName)) return "#e9ecef";
        return !string.IsNullOrEmpty(info?.Color) ? info.Color : "#ccc";
    }

    private bool IsTBD(string name)
    {
        if (string.IsNullOrEmpty(name)) return true;
        if (name.Equals("TBD", StringComparison.OrdinalIgnoreCase)) return true;
        if (name.StartsWith("Winner of", StringComparison.OrdinalIgnoreCase)) return true;
        return false;
    }
}
